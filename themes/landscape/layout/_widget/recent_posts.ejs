<% if (site.posts.length){ %>
  <div class="widget-wrap">
    <h3 class="widget-title"><%= __('recent_posts') %></h3>
    <div class="widget">
      <ul>
        <% site.posts.sort('updated', -1).limit(theme.recent_posts_count).each(function(post){ %>
          <li>
            <% if (post.updated > post.date) { %>
              <a href="<%- url_for(post.path) %>"><b>Update: </b><%= post.title %></a>
            <% } else { %>
              <a href="<%- url_for(post.path) %>"><%= post.title %></a>
            <% } %>
          </li>
        <% }) %>
      </ul>
    </div>
  </div>
<% } %>