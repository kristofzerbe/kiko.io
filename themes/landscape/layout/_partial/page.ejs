<% if (post.photograph){ %>
<style>
  #banner {
    background-size: cover;
  }
  @media screen and (max-width: 479px) {
    #banner { background-image: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 75%), url("/photos/mobile/<%= post.photograph.file %>"); }
  }
  @media screen and (min-width: 480px) and (max-width: 767px) {
    #banner { background-image: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 75%), url("/photos/tablet/<%= post.photograph.file %>"); }
  }
  @media screen and (min-width: 768px) {
    #banner { background-image: linear-gradient(to bottom, rgba(0,0,0,0.5) 0%, rgba(0,0,0,0) 75%), url("/photos/normal/<%= post.photograph.file %>"); }    
  }
</style>
<% } %>

<% if (post.title === '404') { %>
  <script>
    var root = document.documentElement;
    root.classList.add("gray");
  </script> 
<% } %>

<h1 class="page-title"><%= post.title %></h1>

<div class="page-content">
    <%- post.content %>
</div>