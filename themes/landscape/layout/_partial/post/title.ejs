<% if (post.link){ %>
  <h1 class="p-name" itemprop="name">
    <a class="<%= class_name %>" href="<%- url_for(post.link) %>" target="_blank" itemprop="url"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index || show_link){ %>
    <h1 class="p-name" itemprop="name">
      <a class="<%= class_name %>" href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %> p-name" itemprop="name">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>