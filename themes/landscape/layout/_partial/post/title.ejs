<% if (post.link && show_link){ %>
  <h1 itemprop="name">
    <a class="<%= class_name %>" itemprop="url"
       href="<%- url_for(post.link) %>"><%= post.title %></a>
  </h1>
<% } else if (post.title){ %>
  <% if (index || show_link){ %>
    <h1 itemprop="name">
      <a class="<%= class_name %>"
         href="<%- url_for(post.path) %>"><%= post.title %></a>
    </h1>
  <% } else { %>
    <h1 class="<%= class_name %>" itemprop="name" data-pagefind-meta="title">
      <%= post.title %>
    </h1>
  <% } %>
<% } %>