<header id="header">
  <a href="#" id="header-photo-expand" class="fullsizable"></a>
  <a href="#" id="header-photo-link"></a>
  <div id="banner">
    <nav id="header-nav" role="navigation">
      <ul class="menu">
        <% for (var i in theme.nav_menu){ %>
          <li class="menu-item" id="nav-<%= i%>-link" >
            <a 
              class="nav-icon sub-nav-link"
              href="<%- url_for(theme.nav_menu[i]) %>">
                <span><%= __(i) %></span>
              </a>
          </li>
        <% } %>
      </ul>
    </nav>
  </div>
  <div id="header-outer" class="outer">
    <div id="header-title" class="inner">
        <a href="<%- url_for() %>" id="logo">
          <h1 id="title-wrap"></h1>
        </a>
      <% if (theme.subtitle){ %>
        <h2 id="subtitle">
          <%= theme.subtitle %>
        </h2>
      <% } %>
    </div>
    <div id="header-inner" class="inner">
      
      <% /* %>
      <nav id="main-nav">
        <a id="main-nav-toggle" class="nav-icon"></a>
        <% if (page.path !== "index.html") { %>
          <a class="main-nav-link" id="nav-home-link" href="<%- url_for('/') %>"></a>
        <% } %>
      </nav>
      <% */ %>

      <nav id="sub-nav">
        <% /* %>
        <% for (var i in theme.nav_sub){ %>
          <a id="nav-<%= i%>-link" 
             class="nav-icon sub-nav-link"
             href="<%- url_for(theme.nav_sub[i]) %>"
             title="<%= __(i) %>"></a>
        <% } %>
        <% */ %>
        <a id="sub-nav-search" class="sub-nav-icon" title="<%= __('search') %>"></a>
        <div id="sub-nav-theme">          
          <input type="checkbox" id="theme-switch">
          <label for="theme-switch"></label>
        </div>
      </nav>

      <div id="search-form-wrap">
        <%- search_form({button: '&#xF002;'}) %>
      </div>
    </div>
  </div>
</header>
<script>
  if (location.pathname === "/") {
    document.getElementById("nav-home-link").style.display = 'none';
  }
</script>