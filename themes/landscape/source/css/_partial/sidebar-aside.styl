#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: widget-margin 1em

.widget-title
  @extend $block-caption  

.widget
  color: color-sidebar-text
  background: color-widget-background
  border: 1px solid color-widget-border
  padding: 0 15px
  a
    color: color-widget-link
    text-decoration: none
    &:hover
      text-decoration: none
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
    li
      transition: all .1s ease
      line-height: 18px            
      border-left: 2px color-border solid
      margin: 6px 0 6px -12px
      padding: 0 10px      
      &:hover
        border-left: 4px color-link solid
        margin-left: -13px;
        padding-left: 9px
        a 
          color: color-link
