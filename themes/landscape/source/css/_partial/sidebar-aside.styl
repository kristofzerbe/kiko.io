#sidebar
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: widget-margin 1em

.widget-title
  @extend $block-caption  
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header

.widget
  color: color-sidebar-text
  background: color-widget-background
  border: 1px solid color-widget-border
  /[data-theme="dark"] &
    color: dark-color-sidebar-text
    background: dark-color-widget-background
    border: 1px solid dark-color-widget-border
  padding: 0 15px
  a
    color: color-widget-link
    /[data-theme="dark"] &
      color: dark-color-widget-link
    text-decoration: none
    &:hover
      text-decoration: none
  ul, ol, dl
    ul, ol, dl
      margin-left: 15px
      list-style: disc
    li
      transition: all .1s ease
      line-height: line-height            
      border-left: 2px color-border solid
      /[data-theme="dark"] &
        border-color: dark-color-link-border
      margin: 6px 0 6px -12px
      padding: 0 10px      
      &:hover
        border-left: 4px color-link solid
        /[data-theme="dark"] &
          border-color: dark-color-link-border-hover
        margin-left: -13px;
        padding-left: 9px
        a 
          color: color-link
          /[data-theme="dark"] &
            color: dark-color-link
