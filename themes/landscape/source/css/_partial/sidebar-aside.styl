#sidebar
  margin-bottom: block-margin
  font-size: font-size-medium
  @media mq-normal
    column(sidebar-column)

.widget-wrap
  margin: medium-margin 0 medium-margin medium-margin
  line-height: line-height-medium

.widget-title
  @extend $block-caption
  margin: 0
  opacity: 0.33

.widget
  color: var(--color-text)
  background: transparent
  border: 1px solid transparent
  padding-left: (default-padding / 4)
  ul, ol, dl
    ul, ol, dl
      margin-left: 1rem
      list-style: disc
    li
      border-left: 2px var(--color-border) solid
      margin: (medium-margin / 3 * 2) 0 0 -12px
      padding-left: 10px
      a
        text-decoration: none
      &:hover
        border-left: 4px var(--color-accent) solid
        margin-left: -13px
        padding-left: 9px
        a 
          text-decoration: revert
