#footer
  background: color-base
  /[data-theme="dark"] &
    background: dark-color-base
  padding: 15px 0 20px
  color: color-footer-text
  border-radius: border-radius border-radius 0 0;
  a
    color: color-footer-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer .outer
  padding-right: 50px

#footer .inner
  position: relative
  line-height: line-height
  font-size: 0.85em
  display: grid
  grid-template-columns: max-content max-content max-content auto
  grid-template-rows: max-content max-content
  grid-gap: 5px 50px
  grid-template-areas: "menu info bmc ." "dots webring . ."
  @media mq-mobile
    grid-template-columns: 1fr max-content max-content 
    grid-template-rows: max-content max-content
    grid-gap: 15px 5px
    grid-template-areas: "menu info" ". webring" "dots bmc"

  #footer-info
    grid-area: info

  #footer-menu
    grid-area: menu
    .menu-item
      position: relative
      padding-left: 1rem
      &:before
        font-family: fa-icon-solid
        content: icon-square
        font-size: 0.5rem
        position: absolute
        top: 0
        left: 0
        color: color-highlight
        /[data-theme="dark"] &
          color: dark-color-highlight
      a
        font-weight: bold
        text-transform: uppercase
        font-size: 1em

  #footer-bmc
    grid-area: bmc
    .bmc-btn
      min-width: auto
      height: auto;
      padding: 0
      box-shadow: none !important
      border: none !important
      border-radius: 0 !important
      .bmc-btn-text
        font-family: Cookie
        font-size: 24px !important
      svg 
        height: 24px !important
            
  #footer-dots
    grid-area: dots
    li
      display: block
      height: 30px
      margin-right: 10px
      float: left
    li.dot
      a
        display: block
        margin: 10px 0    
        height: 9px
        width: 9px
        background-color: color-grey
        /[data-theme="dark"] &
          background: dark-color-grey 
        opacity: 0.5 
        border-radius: 50%
        display: inline-block

#webring
  grid-area: webring
  align-self: center

#back-to-top 
  color: color-logo
  background-color: color-base
  /[data-theme="dark"] &
    color: dark-color-logo
    background: dark-color-base
  border-radius: border-radius-small

#back-to-top
  right: 10px
  bottom: 10px
  svg 
    height: 20px    
    width: 20px 
    margin: 6px auto 0   

