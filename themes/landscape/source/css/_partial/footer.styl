#footer
  background: color-base
  /[data-theme="dark"] &
    background: dark-color-base
  padding: 10px 0 20px
  color: color-footer-text
  a
    color: color-footer-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer .outer
  padding-right: 75px

#footer .inner
  position: relative

#footer-info
  line-height: line-height
  font-size: 0.85em
  display: flex
  justify-content: start
  flex-direction: row
  align-items: center
  > div
    flex: 0 0 auto
    margin-right: 30px
    .bmc-btn
      min-width: auto
      padding: 0
      box-shadow: none !important
      border: none !important
      border-radius: 0 !important
      .bmc-btn-text
        font-family: Cookie
        font-size: 24px !important

#footer-dots
  margin-top: 10px
  li
    display: block
    height: 30px
    margin-right: 10px
    float: left
  li.dot
    a
      display: block
      margin: 10px 0    
      height: 9px
      width: 9px
      background-color: color-grey
      /[data-theme="dark"] &
        background: dark-color-grey 
      opacity: 0.5 
      border-radius: 50%
      display: inline-block

#back-to-top 
  color: color-logo
  background-color: color-base
  /[data-theme="dark"] &
    color: darl-color-logo
    background: dark-color-base
  border-radius: 0

#back-to-top svg 
  height: 20px    
  width: 20px 
  margin: 6px auto 0   

