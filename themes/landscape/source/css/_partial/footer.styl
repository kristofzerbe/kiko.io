#footer
  background: color-base
  /[data-theme="dark"] &
    background: dark-color-base
  padding: 15px 0 15px
  color: color-footer-text
  border-radius: 0;
  a
    color: color-footer-link
    text-decoration: none
    &:hover
      text-decoration: underline
      &:before
        text-decoration: none

#footer .outer
  padding-right: 50px

#footer .inner
  position: relative
  line-height: line-height
  font-size: 0.85em
  display: grid
  grid-template-columns: max-content auto max-content
  grid-template-rows: max-content max-content
  grid-gap: 0px 80px
  grid-template-areas: "info webring ." "dots bmc ."
  @media mq-mobile
    grid-template-columns: 1fr max-content max-content 
    grid-template-rows: max-content max-content
    grid-gap: 15px 5px
    grid-template-areas: "dots info" "dots webring" "dots bmc"

  #footer-info
    grid-area: info

    #footer-links
      a:not(:first-child)
        &:before
          content: "â€¢"
          margin: 0 6px 0 4px
          &:hover
            text-decoration: none

  #footer-dots
    grid-area: dots
    @media mq-mobile
      margin-left: -10px 
    li
      display: block
      height: 30px
      margin-right: 10px
      @media mq-mobile
        height: auto
        margin-right: 10px
      float: left
    li.dot
      a
        display: block
        margin: 10px 0
        @media mq-mobile
          margin: 0 10px 
        height: 9px
        width: 9px
        background-color: color-grey
        /[data-theme="dark"] &
          background: dark-color-grey 
        opacity: 0.5 
        border-radius: 50%
        display: inline-block

  #footer-bmc
    grid-area: bmc
    .bmc-btn
      min-width: auto
      height: auto;
      padding: 0
      box-shadow: none !important
      border: none !important
      border-radius: 0 !important
      .bmc-btn-text
        font-family: Cookie
        font-size: 22px !important
      svg 
        height: 21px !important
            
  #webring
    grid-area: webring
    align-self: start

#back-to-top 
  color: color-logo
  background-color: color-base
  /[data-theme="dark"] &
    color: dark-color-logo
    background: dark-color-base
  border-radius: border-radius-small

#back-to-top
  right: 10px
  bottom: 10px
  svg 
    height: 20px    
    width: 20px 
    margin: 6px auto 0   

