#footer
  background: var(--color-accent)
  padding: var(--space-default) 0 var(--space-medium)
  color: var(--color-accent-text-near)
  border-radius: 0;
  a
    color: var(--color-footer-link)
    text-decoration: none
    &:hover
      text-decoration: revert

#footer .inner
  position: relative
  width: 95%
  margin-inline: var(--space-medium)
  line-height: var(--line-height-normal)
  font-size: var(--font-size-code)
  display: grid
  grid-template-columns: max-content auto max-content
  grid-template-rows: max-content 0.75rem max-content max-content max-content
  grid-gap: 2px 64px
  grid-template-areas: "links . webrings" ". . webrings" "perf . webrings" "info . webrings" "dots . webrings"
  @media mq-tablet-min
    grid-template-columns: max-content 
    grid-template-rows: max-content 0.75rem max-content max-content 0.75rem max-content 0.3rem max-content 
    grid-gap: 2px 5px
    grid-template-areas: "links" "." "perf" "info" "." "webrings" "." "dots"

  .webrings
    grid-area: webrings
    .webring
      margin-inline-start: -4px
      a.webring-url
        min-width: 120px
        text-align: left
      a.webring-link
        &[href*='#']
          visibility: hidden
        &:hover
          text-decoration: none
          transition: all ease-out 0.2s
          color: var(--color-highlight)
          &:before
            opacity: 1
        &:before
          display: inline-block
          width: 20px
          height: 16px
          content: ""
          opacity: var(--text-opacity)
          transition: all ease-out 0.2s
          filter: invert(1)
          background-size: 20px
          background-repeat: no-repeat
          background-position: 0 1px
        &.webring-prev
          padding-right: var(--space-small)
          &:before
            background-image: url(/images/icons/arrow-notch-left.svg)
        &.webring-next, &.webring-random
          padding-left: var(--space-small)
        &.webring-next
          &:before
            background-image: url(/images/icons/arrow-notch-right.svg)
        &.webring-random
          &:before
            background-image: url(/images/icons/shuffle.svg)

  .dot-space
    display: inline-block
    margin: 0 3px
    color: var(--color-highlight)

  .dot-space:last-child
    display: none

  #footer-info
    grid-area: info

  #footer-links
    grid-area: links

  #footer-perf
    grid-area: perf

  #footer-dots
    grid-area: dots
    margin-block: 1rem
    li
      display: block
      height: 24px
      margin-right: 10px
      float: left
    li.dot
      a
        display: block
        margin: 0
        height: 9px
        width: 9px
        background-color: var(--color-footer-dots)
        border-radius: 50%
        display: inline-block

#back-to-top 
  color: var(--color-logo)
  background-color: var(--color-accent)
  border-radius: var(--border-radius-small)

#back-to-top
  right: 10px
  bottom: 10px
  svg 
    height: 20px    
    width: 20px 
    margin: 6px auto 0   

