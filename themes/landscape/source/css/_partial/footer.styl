#footer
  background: color-base
  /[data-theme="dark"] &
    background: dark-color-base
  padding: 25px 0
  color: color-footer-text
  a
    color: color-footer-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer .outer
  padding-right: 75px

#footer .inner
  position: relative

#footer-info
  line-height: line-height
  font-size: 0.85em

#footer-dots
  margin-top: 10px
  li
    a
      height: 9px
      width: 9px
      background-color: color-grey
      /[data-theme="dark"] &
        background: dark-color-grey 
      opacity: 0.5 
      border-radius: 50%
      display: inline-block

#back-to-top 
  color: color-logo
  background-color: color-base
  /[data-theme="dark"] &
    color: darl-color-logo
    background: dark-color-base
  border-radius: 0

#back-to-top svg 
  height: 20px    
  width: 20px 
  margin: 6px auto 0   

