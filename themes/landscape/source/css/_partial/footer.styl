#footer
  background: color-base
  /[data-theme="dark"] &
    background: dark-color-base
  padding: 15px 0 15px
  color: color-footer-text
  border-radius: 0;
  a
    color: color-footer-link
    text-decoration: none
    &:hover
      text-decoration: underline
      &:before
        text-decoration: none

#footer .outer
  padding-right: 50px

#footer .inner
  position: relative
  line-height: line-height
  font-size: 0.85em
  display: grid
  grid-template-columns: max-content auto max-content
  grid-template-rows: max-content max-content 12px max-content max-content
  grid-gap: 2px 64px
  grid-template-areas: "info webring ." "links . ." ". . ." "perf . ." "dots . ."
  @media mq-mobile
    grid-template-columns: 1fr max-content 
    grid-template-rows: max-content max-content max-content 12px max-content 
    grid-gap: 2px 5px
    grid-template-areas: "dots info" "dots links" "dots perf" "dots ." "dots webring"

  .dot-space
    display: inline-block
    margin: 0 3px
    color: color-highlight
    /[data-theme="dark"] &
      color: dark-color-highlight

  .dot-space:last-child
    display: none

  #footer-info
    grid-area: info

  #footer-links
    grid-area: links

  #footer-perf
    grid-area: perf
    opacity: 0.5

  #footer-dots
    grid-area: dots
    @media mq-mobile
      margin-left: -10px 
    li
      display: block
      height: 30px
      margin-right: 10px
      @media mq-mobile
        height: auto
        margin-right: 10px
      float: left
    li.dot
      a
        display: block
        margin: 10px 0
        @media mq-mobile
          margin: 0 10px 
        height: 9px
        width: 9px
        background-color: color-footer-dots
        border-radius: 50%
        display: inline-block

  #webring
    grid-area: webring
    align-self: start
    display: flex
    a.webring-link
      font-weight: bold
      // font-size: 120%
      padding: 0 8px    
      &:hover
        text-decoration: none
        color: color-highlight
        /[data-theme="dark"] &
          color: dark-color-highlight
    #webring-prev
      &:before
        content: icon-angles-left
        font-family: fa-icons
        font-size: 17px
        font-weight: 400
    #webring-next
      &:before
        content: icon-angles-right
        font-family: fa-icons
        font-size: 17px
        font-weight: 400

#back-to-top 
  color: color-logo
  background-color: color-base
  /[data-theme="dark"] &
    color: dark-color-logo
    background: dark-color-base
  border-radius: border-radius-small

#back-to-top
  right: 10px
  bottom: 10px
  svg 
    height: 20px    
    width: 20px 
    margin: 6px auto 0   

