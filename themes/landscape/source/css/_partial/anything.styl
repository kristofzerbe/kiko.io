.anything-wrap
  margin-top: 0

.anything-list
  overflow: visible
  .anything-wrap
    margin: block-margin 0
    &:first-child
      margin-top: 0

.anything-inner
  @extend $block-inner
  overflow: hidden

.anything-header
  padding: default-padding default-padding 0

.anything-entry
  font-size: font-title-size
  font-weight: font-weight-bold
  line-height: line-height-title
  transition: color 0.4s
  a.posts
    position relative
    z-index: 0
    display: flex
    justify-content: space-between
    gap: 10px
    width: 100%
    text-decoration: none
    color: var(--color-text)
    em
      font-size: font-subtitle-size
      line-height: line-height-subtitle
      padding: (default-padding-vert / 4) (default-padding / 2)
      min-width: 80px
      max-height: 26px
      text-align: center
      transition: all .5s ease-in
      border-radius: border-radius-small
      background-color: var(--color-button-back)
      color: var(--color-button-text)
    &:hover // https://css-tricks.com/adam-argyles-sick-mouse-out-css-hover-effect/
      color: var(--color-accent-text)
      em 
        background-color: var(--color-accent-text)
        color: var(--color-block)
      &:before
        transform: scaleX(1)
        transform-origin: left
    &:before
      position: absolute
      z-index: -1
      margin: -3px -3px -3px -9px
      background: var(--color-block)
      content: ""
      border-radius: border-radius
      inset: 0
      transform: scaleX(0)
      transform-origin: right
      transition: transform 0.4s ease-in-out

.anything-content
  @extend $base-style
  clearfix()
  color: var(--color-text)
  padding: 0 default-padding
  p
    line-height: line-height
    margin: line-height 0
  div.shields-io 
    p
      clear: both
      display: flex
      flex-direction: row
      flex-wrap: wrap
      img
        margin: 0 medium-margin medium-margin 0
  .brand-links
    display: flex
    flex-direction: row
    margin: default-margin 0 double-margin
    gap: 2rem
    @media mq-mobile
      gap: 1rem
    a
      display: flex
      flex-direction: column
      align-items: center
      row-gap: 6px
      img
        width: 42px
      span
        display: block
        font-weight: 1rem
        text-align: center
    a.github
      color: #000 /* fix because of invert filter */
      text-decoration-color: #000
      /[data-theme="dark"] &
        filter: invert(1);
    a.npm
      color: var(--color-npm)
      text-decoration-color: var(--color-npm)
      /[data-theme="dark"] &
        filter: brightness(1.25);
    a.insights
      color: var(--color-insights)
      filter: brightness(0.8);
      text-decoration-color: var(--color-insights)
    a.vscode
      color: var(--color-vscode)
      text-decoration-color: var(--color-vscode)
      /[data-theme="dark"] &
        filter: brightness(1.25);