  text-transform: uppercase
  letter-spacing: 2px
  margin-bottom: var(--space-small)
  font-weight: var(--font-weight-bold)

.widget
  color: var(--color-meta)
  ul, ol
    li
      display: inline-block
      zoom:1
      // *display:inline
      padding-right: .75em

