@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: color-block
    border-right: 1px solid #fff
    box-shadow: inset -12px 0px 14px -18px rgba(0,0,0,1)

  @media prefers-dark
    #mobile-nav
      background: dark-color-block

  #mobile-nav-header
    padding: 10px 25px 20px 25px
    background-color: color-background
    box-shadow: inset -12px 0px 14px -18px #000
    img.avatar
      width: 64px
      height: 64px
      position: absolute
      top: 15px;
      right: 20px;
    h1 
      font-family: font-sans
      font-variant: small-caps
      font-weight: 800
      font-size: 42px
      line-height: 42px
      letter-spacing: 2px
    p
      color: color-grey
      padding-left: 2px
      padding-top: 4px
      span 
        text-transform: uppercase

  @media prefers-dark
    #mobile-nav-header
      background-color: dark-color-background
      img.avatar
        filter: brightness(85%)
      p
        color: dark-color-grey

  #mobile-nav-menu
    padding: 20px 25px 0 25px
    .mobile-nav-link
      display: block
      color: color-default
      text-decoration: none
      padding: 10px 0
      font-weight: bold
      &:hover
        color: #fff
      &:before
        font-family: fa-icon-solid
        font-size: icon-mobile-size
        width: icon-mobile-size
        height: icon-mobile-size
        margin-right: 12px;

  @media prefers-dark
    #mobile-nav-menu
      .mobile-nav-link
        color: dark-color-default

  #mobile-nav-recent-posts
    margin-top: 20px;
    padding: 10px 25px 20px 25px;
    color: color-header;
    h3
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 1em;
      line-height: 1em;
      font-weight: bold;
    a
      display: inline-block
      margin-bottom: 10px
      color: color-widget-link
      text-decoration: none

  @media prefers-dark
    #mobile-nav-recent-posts
      color: dark-color-header;
      a
        color: dark-color-widget-link

@media mq-mobile

  .sub-nav-link
    display: none