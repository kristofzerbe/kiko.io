@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: color-mobile-nav-background
    border-right: 1px solid #fff
    box-shadow: inset -12px 0px 14px -18px rgba(0,0,0,1)

  #mobile-nav-header
    padding: 10px 25px 20px 25px
    background-color: color-background
    box-shadow: inset -12px 0px 14px -18px #000

  #mobile-nav-header img.avatar
    width: 64px
    height: 64px
    position: absolute
    top: 15px;
    right: 20px;
    
  #mobile-nav-header h1 
    font-family: font-sans
    font-variant: small-caps
    font-weight: 800
    font-size: 42px
    line-height: 42px
    letter-spacing: 2px
  
  #mobile-nav-header p
    color: color-grey
    padding-left: 2px
    padding-top: 4px

  #mobile-nav-header p span 
    text-transform: uppercase

@media mq-mobile
  .mobile-nav-link
    display: block
    color: color-default
    text-decoration: none
    padding: 25px 25px 5px
    font-weight: bold
    &:hover
      color: #fff
    &:before
      font-family: fa-icon-solid
      font-size: icon-mobile-size
      width: icon-mobile-size
      height: icon-mobile-size
      margin-right: 12px;

  .sub-nav-link
    display: none
