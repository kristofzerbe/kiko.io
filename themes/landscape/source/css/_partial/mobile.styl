@media mq-mobile
  #mobile-nav
    position: absolute
    top: 0
    left: 0
    width: mobile-nav-width
    height: 100%
    background: color-mobile-nav-background
    border-right: 1px solid #fff

@media mq-mobile
  .mobile-nav-link
    display: block
    color: color-default
    text-decoration: none
    padding: 25px 25px 5px
    font-weight: bold
    &:hover
      color: #fff
    &:before
      font-family: fa-icon-solid
      font-size: icon-mobile-size
      width: icon-mobile-size
      height: icon-mobile-size
      margin-right: 12px;

  .sub-nav-link
    display: none
