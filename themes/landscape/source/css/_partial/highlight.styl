// https://github.com/chriskempson/tomorrow-theme
highlight-background = color-background
highlight-foreground = #4d4d4c
highlight-line-numbers = #666
highlight-current-line = #333
highlight-selection = #515151
highlight-inlinecode-foreground = #c50000
highlight-comment = #8e908c
highlight-red = #c82829 
highlight-orange = #f5871f 
highlight-yellow = #eab700 
highlight-green = #718c00 
highlight-aqua = #3e999f 
highlight-blue = #4271ae 
highlight-purple = #8959a8

dark-highlight-background = dark-color-background
dark-highlight-foreground = #f1f1f1
dark-highlight-line-numbers = #888
dark-highlight-current-line = #999
dark-highlight-selection = #ccc
dark-highlight-inlinecode-foreground = #ea8486
dark-highlight-comment = #bbb
dark-highlight-red = #ff6162 
dark-highlight-orange = #f5871f 
dark-highlight-yellow = #eab700 
dark-highlight-green = #9dc107 
dark-highlight-aqua = #54cad2 
dark-highlight-blue = #71afff 
dark-highlight-purple = #ce82ff

$code-block
  margin: 0 article-padding * -1
  padding: 15px article-padding
  overflow: auto  
  line-height: font-size * line-height

$dark-code-block
  background: dark-highlight-background
  color: dark-highlight-foreground

$line-numbers
  font-size: 0.85em

.article-entry
  pre, code
    font-family: font-mono
  code
    color: highlight-inlinecode-foreground
    padding: 0 0.3em
  pre
    @extend $code-block
    background: highlight-background
    color: highlight-foreground
    code
      color: highlight-foreground
      background: none
      text-shadow: none
      padding: 0
  .highlight
    @extend $code-block
    background: highlight-background
    color: highlight-foreground
    pre
      border: none
      margin: 0
      padding: 0
    table
      margin: 0
      width: auto
    td
      border: none
      padding: 0
    figcaption
      clearfix()
      font-size: 0.85em
      color: highlight-comment
      line-height: 1em
      margin-bottom: 1em
      a
        float: right
    .gutter pre
      @extend $line-numbers
      color: highlight-line-numbers
      text-align: right
      padding-right: 20px
    .line
      height: font-size * line-height
    .line.marked
      background: highlight-selection
  .gist
    margin: 0 article-padding * -1
    border-style: solid
    border-color: color-border
    border-width: 1px 0
    background: highlight-background
    padding: 15px article-padding 15px 0
    .gist-file
      border: none
      font-family: font-mono
      margin: 0
      .gist-data
        background: none
        border: none
        .line-numbers
          @extend $line-numbers
          background: none
          border: none
          padding: 0 20px 0 0
        .line-data
          padding: 0 !important
      .highlight
        margin: 0
        padding: 0
        border: none
      .gist-meta
        background: highlight-background
        color: highlight-comment
        font: 0.85em font-sans
        text-shadow: 0 0
        padding: 0
        margin-top: 1em
        margin-left: article-padding
        a
          color: color-link
          font-weight: normal
          &:hover
            text-decoration: underline

@media prefers-dark
  .article-entry
    pre
      @extend $dark-code-block
      background: dark-highlight-background
      color: dark-highlight-foreground
      code
        color: dark-highlight-foreground
    .highlight
      @extend $dark-code-block
      background: dark-highlight-background
      color: dark-highlight-foreground
    code
      color: dark-highlight-inlinecode-foreground
    .gutter pre
      color: dark-highlight-line-numbers

pre
  .comment
  .title
    color: highlight-comment
  .variable
  .attribute
  .tag
  .regexp
  .ruby .constant
  .xml .tag .title
  .xml .pi
  .xml .doctype
  .html .doctype
  .css .id
  .css .class
  .css .pseudo
    color: highlight-red
  .number
  .preprocessor
  .built_in
  .literal
  .params
  .constant
    color: highlight-orange
  .class
  .ruby .class .title
  .css .rules .attribute
    color: highlight-green
  .string
  .value
  .inheritance
  .header
  .ruby .symbol
  .xml .cdata
    color: highlight-blue
  .css .hexcolor
    color: highlight-aqua
  .function
  .python .decorator
  .python .title
  .ruby .function .title
  .ruby .title .keyword
  .perl .sub
  .javascript .title
  .coffeescript .title
    color: highlight-blue
  .keyword
  .javascript .function
    color: highlight-purple

