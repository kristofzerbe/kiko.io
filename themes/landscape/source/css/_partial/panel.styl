.panels
  // clearfix()
  column-gap: 0
  margin: calc(var(--space-medium) * -1)
  @media mq-tablet
    column-count: 2
  @media mq-normal
    column-count: 3

.panel
  page-break-inside: avoid // for firefox
  break-inside: avoid-column
  padding: var(--space-normal) 0
  margin: calc(var(--space-normal) * -1) var(--space-medium)
  &:first-child
    margin-top: 0

.panel-inner
  padding: var(--space-median)
  &.today
    border-top: 8px var(--color-accent) solid
  &.yesterday
    border-top: 8px var(--color-accent-median) solid

.panel-header
  margin-inline: calc(var(--space-median) * -1)
  margin-block-start: calc(var(--space-median) * -1)
  margin-block-end: var(--space-median)

.panel-favicon
  display: block
  margin-top: var(--space-median)
  img
    width: 32px
    height: 32px
    margin: 0

.panel-photo
  height: 150px
  width: 100%
  object-fit: cover

.panel-content
  padding: 0 var(--space-small) var(--space-medium)
  overflow: hidden
  p
    margin-bottom: 0 !important
  p.small
    font-size: var(--font-size-code)
    line-height: var(--line-height-small)
  div.icon-links
    margin: 1rem 0 1.25rem
    a
      text-decoration: none
      background-repeat: no-repeat 
      min-width: 16px
      display: inline-block
      margin-inline-end: var(--space-thin)
      filter: grayscale(1)
      color: var(--color-button-text)
      &:hover
        filter: grayscale(0)
        opacity: 1 !important
    a.mastodon
      background-image: var(--brand-mastodon)
      background-size: 14px
      background-position: 0 6px
      opacity: 0.4
    a.rss
      background-image: var(--brand-rss)
      background-size: 18px
      background-position: 0 4px
      opacity: 0.5
      &:hover
        color: var(--color-rss)
      small
        padding-left: 22px

.panel-date,
.panel-category
  font-size: var(--font-size-small)
  margin-bottom: var(--space-medium)
  display: inline-block

.panel-category
  float: right

.panel-date
  time.updated
    display: block
    line-height: var(--line-height-tiny)
    color: var(--color-text)
    &:before
      content: "Update, "

.panel-anything
  display: block
  text-decoration: none
  line-height: var(--line-height-thin)
  text-transform: uppercase
  font-size: var(--font-size-small)
  color: var(--color-meta)
  &:hover
    color: var(--color-accent-text)

.panel-title
  position relative
  z-index: 0
  display: inline-block
  margin-top: var(--space-small)
  margin-bottom: var(--space-small)
  text-decoration: none
  line-height: var(--line-height-text)
  font-size: var(--font-subtitle-size)
  font-weight: var(--font-weight-bold)
  color: var(--color-text)
  transition: color 0.2s
  &:hover
    color: var(--color-accent-text)
    &:before
      transform: scaleX(1)
      transform-origin: left
  &:before
    position: absolute
    z-index: -1
    margin: -0.25rem -0.5rem
    background: var(--color-block)
    content: ""
    border-radius: var(--border-radius-normal)
    inset: 0
    transform: scaleX(0)
    transform-origin: right
    transition: transform 0.4s ease-in-out

.panel-subtitle
  margin-top: var(--space-small)
  font-size: var(--font-size-normal)
  line-height: var(--line-height-medium)
  color: var(--color-meta)

.panel-footer
  font-size: var(--font-size-small)

.panel-tags
  opacity: 0.5
  transition: all ease-out 0.4s
  li
    float: right
  &:hover
    opacity: 1

.panel-date,
.panel-category a,
.panel-tags a
  text-decoration: none
  color: var(--color-meta)

.panel-category a,
.panel-tags a
  &:hover
    color: var(--color-accent-text)
