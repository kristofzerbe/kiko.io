.archives-wrap
  margin: block-margin 0

.archives
  clearfix()

.archive-title
  font-size: 1.6em
  font-weight: bold
  line-height: line-height-title
  margin-top: 1em
  margin-bottom: 1em
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default

.archive-year-wrap
  margin-bottom: 1em

.archive-year
  @extend $block-caption
  margin-left: 0
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header
      
.archives
  column-gap: 10px
  @media mq-tablet
    column-count: 2
  @media mq-normal
    column-count: 3

.archive-article
  avoid-column-break()

.archive-article-inner
  @extend $block
  padding: 10px
  margin-bottom: 15px
  background: color-block
  box-shadow: 1px 2px 3px color-border
  border: 1px solid color-border
  /[data-theme="dark"] &
    background: dark-color-block
    box-shadow: 1px 2px 3px dark-color-border
    border: 1px solid dark-color-border

.archive-article-photo
    height: 90px
    width: calc(100% + 20px)
    margin: -10px 0 10px -10px
    object-fit: cover
    transform: scale(1)
    transform-style: preserve-3d
    transition: all ease-out .4s  
    opacity: 0.3
    filter: grayscale(1) contrast(0.5)
    /[data-theme="dark"] &
        opacity: 0.75
        filter: grayscale(1) contrast(0.5) brightness(0.6)

.archive-article-photo.in-view
  transform: scale(1.05)
  opacity: 1
  filter: grayscale(0) contrast(1)
  /[data-theme="dark"] &
      opacity: 1
      filter: grayscale(0) contrast(1) brightness(0.75)

.archive-article-title
  display: inline-block
  margin-top: 5px
  margin-bottom: 5px
  text-decoration: none
  line-height: line-height-title
  font-size: 16px
  font-weight: bold
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default
  transition: color 0.2s
  &:hover
    color: color-link
    /[data-theme="dark"] &
      color: dark-color-link

.archive-article-subtitle
  line-height: line-height-subtitle
  font-size: 0.9em
  color: color-header 
  margin-top: 2px

.archive-article-footer
  margin-top: 1em

.archive-article-date
  color: color-grey
  text-decoration: none
  font-size: 0.85em
  line-height: 1em
  margin-bottom: 0.5em
  display: block

#page-nav
  clearfix()
  margin: block-margin auto
  background: color-block
  box-shadow: 1px 2px 3px color-border
  border: 1px solid color-border
  /[data-theme="dark"] &
    background: dark-color-block
    box-shadow: 1px 2px 3px dark-color-border
    border: 1px solid dark-color-border
  text-align: center
  color: color-grey
  overflow: hidden
  a, span
    padding: 10px 20px
    line-height: 1
    height: 2ex
  a
    color: color-grey
    text-decoration: none
    &:hover
      background: color-link
      color: color-block
      /[data-theme="dark"] &
        background: dark-color-background
  .prev
    float: left
  .next
    float: right
  .page-number
    display: inline-block
    @media mq-mobile
      display: none
  .current
    color: color-default
    font-weight: bold
  .space
    color: color-border