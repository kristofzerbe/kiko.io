.archives-wrap
  margin: block-margin 0

.archives
  clearfix()

.archive-title
  font-size: 1.6em
  font-weight: bold
  line-height: line-height-title
  text-transform: uppercase
  margin-top: 1em
  margin-bottom: 1em
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default

.archive-year-wrap
  margin-bottom: 1em

.archive-year
  @extend $block-caption
  margin-left: 0
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header
      
.archives
  column-gap: 10px
  @media mq-tablet
    column-count: 2
  @media mq-normal
    column-count: 3

.archive-list-navigation
  padding: 20px 20px 20px 0
  display: flex
  justify-content: flex-start
  flex-wrap: nowrap
  overflow-x: auto
  background: linear-gradient(90deg, color-background 30%, color-block 80%, color-background 100%)
  /[data-theme="dark"] &
    background: linear-gradient(90deg, dark-color-background 30%, dark-color-block 80%, dark-color-background 100%)
  .archive-list-wrapper
    flex: 0 0 auto
    h2
      font-weight: bold
      font-size: 16px
      margin-bottom: 10px
    ul
      display: flex
      justify-content: flex-start
      flex-direction: column
      flex-wrap: wrap
      max-height: 200px;
      li
        flex: 1 0 25%
        box-sizing: border-box
        line-height: 24px
        transition: all .1s ease
        border-left: 2px color-border solid
        /[data-theme="dark"] &
          border-color: dark-color-border
        margin: 1px 0 1px 0
        padding: 0 20px 0 10px
        display: flex
        flex-direction: row
        justify-content: space-between
        &:hover
          border-left: 4px color-link solid
          /[data-theme="dark"] &
            border-color: dark-color-border-hover
          margin-left: -1px;
          padding-left: 9px
        a
          display: block
          width: calc(100% - 40px)
          margin-right: 20px
          color: color-widget-link
          /[data-theme="dark"] &
            color: dark-color-widget-link
          text-decoration: none
          &:hover
            text-decoration: none
        &:hover
          a, span
            color: color-link
            /[data-theme="dark"] &
              color: dark-color-link
        span 
          padding-left: 0
          height: 22px
          width: 22px
          text-align: center
          background-color: color-background
          /[data-theme="dark"] &
            background-color: dark-color-background

.archive-article
  avoid-column-break()

.archive-article-inner
  @extend $block
  padding: 10px
  margin-bottom: 15px
  overflow: hidden  
  background: color-block
  box-shadow: 1px 2px 3px color-border
  border: 1px solid color-border
  /[data-theme="dark"] &
    background: dark-color-block
    box-shadow: 1px 2px 3px dark-color-border
    border: 1px solid dark-color-border

.archive-article-photo
    height: 90px
    width: calc(100% + 20px)
    margin: -10px 0 10px -10px
    object-fit: cover
    transform: scale(1)
    transform-style: preserve-3d
    transition: all ease-out .4s  
    opacity: 0.3
    filter: grayscale(1) contrast(0.5)
    /[data-theme="dark"] &
        opacity: 0.75
        filter: grayscale(1) contrast(0.5) brightness(0.6)

.archive-article-photo.in-view
  transform: scale(1.05)
  opacity: 1
  filter: grayscale(0) contrast(1)
  /[data-theme="dark"] &
      opacity: 1
      filter: grayscale(0) contrast(1) brightness(0.75)

.archive-article-content
  padding: 0 5px 15px

.archive-article-date,
.archive-article-category
  font-size: 0.85em
  line-height: 1em
  margin-bottom: 1.5em
  display: inline-block

.archive-article-category
  float: right
  display: inline-block

.archive-article-series
  line-height: line-height
  text-transform: uppercase
  font-size: 0.8em
  color: color-grey
  /[data-theme="dark"] &
    color: dark-color-grey

.archive-article-title
  display: inline-block
  margin-top: 5px
  margin-bottom: 5px
  text-decoration: none
  line-height: line-height-title
  font-size: 16px
  font-weight: bold
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default
  transition: color 0.2s
  &:hover
    color: color-link
    /[data-theme="dark"] &
      color: dark-color-link

.archive-article-subtitle
  line-height: line-height-subtitle
  font-size: 1em
  margin-top: 2px
  color: color-grey
  /[data-theme="dark"] &
    color: dark-color-grey

.archive-article-footer
  font-size: 0.75em

.archive-article-tags
  li
    float: right

.archive-article-date,
.archive-article-category a,
.archive-article-tags a
  text-decoration: none
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header
  &:hover
    color: color-link
    /[data-theme="dark"] &
      color: dark-color-link

#page-nav
  clearfix()
  margin: block-margin auto
  background: color-block
  box-shadow: 1px 2px 3px color-border
  border: 1px solid color-border
  /[data-theme="dark"] &
    background: dark-color-block
    box-shadow: 1px 2px 3px dark-color-border
    border: 1px solid dark-color-border
  text-align: center
  color: color-grey
  overflow: hidden
  a, span
    padding: 10px 20px
    line-height: 1
    height: 2ex
  a
    color: color-grey
    text-decoration: none
    &:hover
      background: color-link
      color: color-block
      /[data-theme="dark"] &
        background: dark-color-background
  .prev
    float: left
  .next
    float: right
  .page-number
    display: inline-block
    @media mq-mobile
      display: none
  .current
    color: color-default
    font-weight: bold
  .space
    color: color-border