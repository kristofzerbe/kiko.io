.archives-wrap
  margin: block-margin 0

.archive-title
  @extend $title
  em
    &:before
      display: inline-block
      content: ""
      opacity: 0.6
      background-repeat: no-repeat
      background-size: var(--icon-w) var(--icon-h)
      width: var(--icon-w)
      height: var(--icon-h)
      /[data-theme="dark"] &
        filter: invert(0)
  em.date
    &:before
      --icon-w: 24px
      --icon-h: 28px
      padding-right: 8px
      background-position: 0 4px
      background-image: url(/images/icons/date.svg)
  em.tag
    &:before
      --icon-w: 18px
      --icon-h: 22px
      padding-right: 12px
      background-position: 0 2px
      background-image: url(/images/icons/tag.svg)
  em.category
    &:before
      --icon-w: 22px
      --icon-h: 26px
      padding-right: 6px
      background-position: -3px 4px
      background-image: url(/images/icons/bookmark.svg)

.archive-year-wrap
  margin-bottom: medium-margin

.archive-year
  @extend $block-caption
  margin-left: 0
  font-size: font-titlelist-size
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header

.archive-list-navigation
  padding: 0 default-padding-vert (default-padding-vert / 3) 0
  display: flex
  justify-content: flex-start
  flex-wrap: nowrap
  overflow-x: auto
  background: linear-gradient(90deg, color-background 30%, color-block 80%, color-background 100%)
  /[data-theme="dark"] &
    background: linear-gradient(90deg, dark-color-background 30%, dark-color-block 80%, dark-color-background 100%)
  .archive-list-wrapper
    flex: 0 0 auto
    padding-right: default-padding
    transition: all .2s ease
    &:hover
      color: var(--color-accent)
      /[data-theme="dark"] &
        color: var(--dark-color-accent)
    h2
      font-weight: font-weight-bold
      font-size: 1rem
      margin-bottom: medium-margin
    ul
      display: flex
      justify-content: flex-start
      flex-direction: column
      flex-wrap: wrap
      max-height: 220px;
      li
        flex: 1 0 25%
        box-sizing: border-box
        border-left: 2px color-border solid
        /[data-theme="dark"] &
          border-color: dark-color-border
        margin: 1px 0 1px 0
        padding: 0 8px 0 10px
        display: flex
        flex-direction: row
        justify-content: space-between
        &:hover
          border-left: 4px var(--color-accent) solid
          /[data-theme="dark"] &
            border-color: dark-color-border-hover
          margin-left: -1px;
          padding-left: 9px
        a
          display: block
          width: calc(100% - 40px)
          margin-right: 20px
          color: color-widget-link
          /[data-theme="dark"] &
            color: dark-color-widget-link
          text-decoration: none
          &:hover
            text-decoration: none
        &:hover
          a, span
            color: var(--color-accent)
            /[data-theme="dark"] &
              color: var(--dark-color-accent)
        span 
          padding-left: 0
          height: 22px
          width: 22px
          text-align: center
          background-color: color-background
          /[data-theme="dark"] &
            background-color: dark-color-background

.archive-list-wrapper.archive-list-months 
  ul
    display: block
    overflow: auto
    max-height: 215px
    padding-left: 1px
    &::-webkit-scrollbar
      width: 0px

#page-nav
  clearfix()
  margin: block-margin auto
  text-align: center
  overflow: hidden
  color: color-grey
  /[data-theme="dark"] &
    color: dark-color-grey
  a, span
    padding: (default-padding-vert / 2) (default-padding / 2)
    line-height: 1
    height: 2ex
  a
    color: color-grey
    /[data-theme="dark"] &
      color: dark-color-grey
    text-decoration: none
    &:hover
      color: var(--color-accent)
      /[data-theme="dark"] &
        color: var(--dark-color-accent)
  .prev
    float: left
  .next
    float: right
  .page-number
    display: inline-block
    @media mq-mobile
      display: none
  .current
    color: color-default
    font-weight: font-weight-bold
  .space
    color: color-default
    font-weight: font-weight-bold
    @media mq-mobile
      display: none
