.article
  margin: block-margin 0

.article-inner
  @extend $block
  overflow: hidden
  background: color-block
  box-shadow: 1px 2px 3px color-border
  border: 1px solid color-border
  /[data-theme="dark"] &
    background: dark-color-block
    box-shadow: 1px 2px 3px dark-color-border
    border-color: dark-color-border

.article-photo
  height: 150px
  width: 100%
  object-fit: cover
  transform: scale(1)
  transform-style: preserve-3d
  transition: all ease-out .6s  
  opacity: 0.3
  filter: grayscale(1) contrast(0.5)
  /[data-theme="dark"] &
    opacity: 0.75
    filter: grayscale(1) contrast(0.5) brightness(0.6)

.article-photo.in-view
    transform: scale(1.1)
    opacity: 1
    filter: grayscale(0) contrast(1)
    /[data-theme="dark"] &
      opacity: 1
      filter: grayscale(0) contrast(1) brightness(0.75)

.article-meta
  clearfix()
  position: relative;
  z-index: 99

.article-date
  @extend $block-caption
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header
  float: left
  margin-bottom: 8px
  margin-right: 20px
  font-size: 14px
  letter-spacing: 1px
  &:hover
    color: color-link
    /[data-theme="dark"] &
      color: dark-color-link

.article-comment-link
  @extend $block-caption
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header
  float: left
  font-size: 12px
  &:before
    content: icon-comment
    font-family: fa-icon-solid
    padding-right: 5px
  .hide
    display: none

.article-category
  position: absolute
  top: -8px
  right: 0
  line-height: 2em
  margin-left: 8px
  border: none
  &:hover
    a
      color: color-link
    /[data-theme="dark"] &
      a 
        color: dark-color-link
  .article-category-link
    @extend $block-caption
    color: color-header
    /[data-theme="dark"] &
      color: dark-color-header

.article-header
  padding: article-padding article-padding 0

.article-series
  line-height: line-height
  text-transform: uppercase
  font-size: 1em
  margin-bottom: 5px
  color: color-grey
  /[data-theme="dark"] &
    color: dark-color-grey

.article-title
  text-decoration: none
  font-size: 2em
  font-weight: bold
  line-height: line-height-title
  transition: color 0.2s
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default
  a&:hover
    color: color-link
    /[data-theme="dark"] &
      color: dark-color-link

.article-subtitle
  font-size: 1.2em
  margin-top: subtitle-margin
  color: color-header

.article-entry
  @extend $base-style
  clearfix()
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default
  padding: 0 article-padding
  p, table
    line-height: line-height
    margin: line-height 0
  h1, h2, h3, h5
    font-weight: bold
  h4, h6
    font-weight: normal
  h1, h2, h3, h4, h5, h6
    line-height: line-height-title
    margin: line-height-title 0
  :not(.article-more-link)
    a
      color: color-link
      text-decoration: none
      /[data-theme="dark"] &
        color: dark-color-link
        border-bottom: dark-color-link-border 1px solid
      &:hover
        border-bottom: color-link 1px solid
        /[data-theme="dark"] &
          border-bottom: dark-color-link 1px solid
  ul, ol, dl
    margin-top: line-height
    margin-bottom: line-height
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
    /[data-theme="dark"] &
      filter: brightness(85%)
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: bold
    padding-bottom: 0.5em
    border-bottom: 3px solid color-border-article
    /[data-theme="dark"] &
      border-bottom: 3px solid dark-color-border-article
  td
    padding: 10px 0
    border-bottom: 1px solid color-border-article
    /[data-theme="dark"] &
      border-bottom: 3px solid dark-color-border-article
  blockquote
    border-left: 4px silver solid 
    padding-left: 10px
    font-family: font-serif
    font-size: 110%
    margin: line-height 0
    text-align: left
    p
      line-height: 1.4em
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    /[data-theme="dark"] &
      color: dark-color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

.article-more-link a
  display: inline-block
  line-height: 1em
  font-size: 0.9em;
  font-weight: 300
  color: color-grey
  position: relative
  &:after
    content: icon-caret-right
    font-family: fa-icon-solid
    color: color-link
    font-size: 18px;
    position: absolute;
    right: -16px;    
  /[data-theme="dark"] &
    color: dark-color-grey
    &:after
      color: dark-color-link
  text-decoration: none
  &:hover    
    text-decoration: none
    color: color-link
    /[data-theme="dark"] &
      color: dark-color-link

.article-footer
  clearfix()
  font-size: 0.85em
  line-height: line-height
  border-top: 1px solid color-border-article
  /[data-theme="dark"] &
    border-top-color: dark-color-border-article
  padding-top: line-height
  margin: 0 article-padding article-padding

.article-tags 
  float: right
  a
    text-decoration: none
    color: color-grey
    /[data-theme="dark"] &
      color: dark-color-grey
    &:hover
      color: color-link
      /[data-theme="dark"] &
        color: dark-color-link

.article-tag-list-item
  float: left
  margin-left: 10px

.article-tag-list-link
  &:before
    content: "#"

#article-nav
  clearfix()
  position: relative
  @media mq-normal
    margin: block-margin 0
    &:before
      absolute-center(8px)
      content: ""
      border-radius: 50%
      background: color-grey
      // box-shadow: 0 1px 2px #fff

.article-nav-link-wrap
  text-decoration: none
  color: color-grey
  box-sizing: border-box
  margin-top: block-margin
  text-align: center
  display: block
  &:hover
    color: color-default
  @media mq-normal
    width: 50%
    margin-top: 0

#article-nav-newer
  @media mq-normal
    float: left
    text-align: right
    padding-right: 20px

#article-nav-older
  @media mq-normal
    float: right
    text-align: left
    padding-left: 20px

.article-nav-caption
  text-transform: uppercase
  letter-spacing: 2px
  color: color-grey
  line-height: 1em
  font-weight: bold
  #article-nav-newer &
    margin-right: -2px

.article-nav-title
  font-size: 0.85em
  line-height: line-height
  margin-top: 0.5em

.article-gallery
  background: color-default
  /[data-theme="dark"] &
    background: dark-color-default
  position: relative

.article-gallery-photos
  position: relative
  overflow: hidden

.article-gallery-img
  display: none
  max-width: 100%
  &:first-child
    display: block
  &.loaded
    position: absolute
    display: block
  img
    display: block
    max-width: 100%
    margin: 0 auto
