.article
  margin: block-margin 0

.article-inner
  @extend $block
  overflow: hidden

@media prefers-dark
  .article-inner
    background: dark-color-block
    box-shadow: 1px 2px 3px dark-color-border
    border: 1px solid dark-color-border

.article-meta
  clearfix()
  position: relative;

.article-date
  @extend $block-caption
  float: left
  margin-bottom: 8px
  margin-right: 20px
  font-size: 12px
  letter-spacing: 1px

@media prefers-dark
  .article-date
    color: dark-color-header

.article-comment-link
  @extend $block-caption
  float: left
  font-size: 12px
  &:before
    content: "\f27a"
    font-family: fa-icon-solid
    padding-right: 5px
  .hide
    display: none

@media prefers-dark
  .article-comment-link
    color: dark-color-header

.article-category
  position: absolute;
  top: 8px;
  right: 12px;
  line-height: 2em;
  margin-left: 8px;
  box-shadow: 1px 2px 3px color-border;
  border: none;
  border-radius: 2px;
  background-color: color-header;

.article-category.category-sql
  background-color: color-category-sql;
.article-category.category-tools
  background-color: color-category-tools;
.article-category.category-javascript
  background-color: color-category-javascript

@media prefers-dark
  .article-category
    box-shadow: 1px 2px 3px dark-color-border;
    background-color: dark-color-header;

  .article-category.category-sql
    background-color: dark-color-category-sql;
  .article-category.category-tools
    background-color: dark-color-category-tools;
  .article-category.category-javascript
    background-color: dark-color-category-javascript

.article-category-link
  @extend $block-caption
  margin: 0 12px 1em
  color: color-category-link

@media prefers-dark
  .article-category-link
    color: dark-color-category-link

.article-header
  padding: article-padding article-padding 0

.article-title
  text-decoration: none
  font-size: 2em
  font-weight: bold
  color: color-default
  line-height: line-height-title
  transition: color 0.2s
  a&:hover
    color: color-link

@media prefers-dark
  .article-title
    color: dark-color-default
    a&:hover
      color: dark-color-link

.article-subtitle
  font-size: 1.2em
  margin-top: subtitle-margin
  color: color-header

.article-entry
  @extend $base-style
  clearfix()
  color: color-default
  padding: 0 article-padding
  p, table
    line-height: line-height
    margin: line-height 0
  h1, h2, h3, h4, h5, h6
    font-weight: bold
  h1, h2, h3, h4, h5, h6
    line-height: line-height-title
    margin: line-height-title 0
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline
  ul, ol, dl
    margin-top: line-height
    margin-bottom: line-height
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: bold
    border-bottom: 3px solid color-border-article
    padding-bottom: 0.5em
  td
    border-bottom: 1px solid color-border-article
    padding: 10px 0
  blockquote
    font-family: font-serif
    font-size: 1.4em
    margin: line-height 20px
    text-align: center
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "â€”"
          padding: 0 0.5em
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: 0.5em
      margin-right: 1em
    &.right
      margin-right: 0.5em
      margin-left: 1em
  .caption
    color: color-grey
    display: block
    font-size: 0.9em
    margin-top: 0.5em
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0

@media prefers-dark
  .article-entry
    color: dark-color-default
    a
      color: dark-color-link
    img, video
      filter: brightness(85%);
    th
      border-bottom: 3px solid dark-color-border-article
    td
      border-bottom: 1px solid dark-color-border-article
    .caption
      color: color-grey    

.article-more-link a
  display: inline-block
  line-height: 1em
  font-size: 0.9em;
  padding: 10px
  background: color-border-article
  color: color-grey
  text-decoration: none
  &:hover
    background: color-link
    text-decoration: none

@media prefers-dark
  .article-more-link a
    background: dark-color-border-article
    color: dark-color-grey
    &:hover
      background: dark-color-background

.article-footer
  clearfix()
  font-size: 0.85em
  line-height: line-height
  border-top: 1px solid color-border-article
  padding-top: line-height
  margin: 0 article-padding article-padding
  a
    color: color-grey
    text-decoration: none
    &:hover
      color: color-default

@media prefers-dark
  .article-footer
    border-top-color: dark-color-border-article
    a
      color: dark-color-grey
      &:hover
        color: dark-color-default

.article-tag-list-item
  float: left
  margin-right: 10px

.article-tag-list-link
  &:before
    content: "#"

