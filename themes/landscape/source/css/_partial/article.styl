.article-interactions
  --color-default: color-default
  --color-block: color-block
  --color-background: color-background
  --color-border: color-border
  /[data-theme="dark"] &
    --color-default: dark-color-default
    --color-block: dark-color-block
    --color-background: dark-color-background
    --color-border: dark-color-border
  padding-block-end: (default-padding / 2)

  .message, .interactions-list
    font-style: italic
    color: color-header

  .interactions-avatars, .interactions-list
    padding-block-end: default-padding-vert

  .interactions-avatars
    --avatar-size: 36px
    --avatar-border: 4px
    --avatar-gap: (default-margin / 2)
    --icon-size: 12px
    width: 99%
    display: flex
    flex-direction: row
    flex-wrap: wrap
    gap: 0 var(--avatar-gap)
    h3
      @extend $block-caption
      font-size: font-size-medium
      font-weight: font-weight-normal
      padding-block-start: calc(var(--avatar-gap) / 2)
      padding-inline-end: var(--avatar-gap)
      color: color-header
      /[data-theme="dark"] &
        color: dark-color-header
    .avatar
      position: relative
      img
        width: var(--avatar-size)
        height: var(--avatar-size)
        max-width: var(--avatar-size)
        max-height: var(--avatar-size)
        border-radius: 50%
      &:after
        content: ""
        position: absolute
        right: -8px
        bottom: 2px
        display: block
        width: var(--icon-size)
        height: var(--icon-size)
        border-radius: 50%
        border-width: var(--avatar-border) 
        border-style: solid
        border-color: var(--color-background)
        background-repeat: no-repeat no-repeat
        background-position: center center
        background-size: cover

  .interactions-list
    --avatar-size: 42px
    --avatar-border: 12px
    --avatar-gap: small-margin
    --icon-size: 14px
    display: grid
    grid-row-gap: medium-margin
    /[data-theme="dark"] &
      color: dark-color-header
    .interaction
      padding-inline-start: calc(var(--avatar-size) + calc(var(--avatar-border) * 2))
      padding-inline-end: medium-margin
      padding-block: var(--avatar-border)
      position: relative
      background-color: var(--color-block)
      color: var(--color-default)
      border-radius: border-radius-small
      font-style: normal
      font-size: font-size-medium
      line-height: line-height-small
      overflow: hidden
      a
        word-wrap: break-word
        text-decoration: none
        &:hover
          text-decoration: underline
        &:after, &:before
          font-weight: 300
          color: initial
          cursor: initial
      .avatar
        display: block
        position: absolute
        top: calc(-1 * var(--avatar-border))
        left: calc(-1 * var(--avatar-border))
        right: unset
        img
          width: var(--avatar-size)
          height: var(--avatar-size)
          max-width: var(--avatar-size)
          max-height: var(--avatar-size)
          border-radius: 50%
          border-width: var(--avatar-border) 
          border-style: solid
          border-color: var(--color-background)
      &.isown
        padding-inline-end: calc(var(--avatar-size) + calc(var(--avatar-border) * 2))
        padding-inline-start: 1rem
        .avatar
          left: unset
          right: calc(-1 * var(--avatar-border))
      .meta
        display: block
        .author
          position: relative
          padding-left: 20px
          font-weight: 400
          &:before
            content: ""
            position: absolute
            top: 2px
            display: block
            width: var(--icon-size)
            height: var(--icon-size)
            background-repeat: no-repeat no-repeat
            background-position: center center
            background-size: cover
          img.emoji
            position: relative
            top: 2px
            width: var(--icon-size)
            padding-inline: 1px
      .content
        margin-block-start: calc(var(--avatar-border) / 3 * 2);
        padding-block-start: calc(var(--avatar-border) / 3 * 2);
        border-block-start: solid;
        border-width: 1px;
        border-image-slice: 1;
        border-image-source: linear-gradient(to right, var(--color-block), var(--color-border), var(--color-block));
        p
          margin: 0
        p + p
          margin-block: small-margin
        a
          opacity: 0.75
        & *
          overflow: hidden

