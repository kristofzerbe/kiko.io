.article
  margin: block-margin 0
  position: relative

.article-meta
  clearfix()
  position: relative
  z-index: 99
  font-size: font-size-medium

.article-date
  @extend $block-caption
  color: color-header
  /[data-theme="dark"] &
    color: dark-color-header
  float: left
  margin-bottom: 0.5rem
  margin-right: 1.25rem
  letter-spacing: 0
  time.updated
    color: color-foreground
    /[data-theme="dark"] &
      color: dark-color-foreground
    &:before
      content: "Update, "

.article.note  
  &:not(:first-child)
    margin-top: double-margin
  &.h-entry
    margin-top: double-margin + medium-margin
  .article-header
    padding-top: (default-padding-vert * 2)
  .article-meta
    time
      top: (medium-margin * -1)
      left: medium-margin
      position: absolute
      z-index: 99
      padding: small-padding (small-padding * 3) (small-padding / 3 * 2)
      font-size: font-size-small
      font-weight: font-weight-bold
      border-radius: border-radius-small
      text-transform: uppercase
      color: color-logo
      background-color: var(--color-accent2)
    small
      display: none
  &.rel
    .article-header
      padding-top: (default-padding-vert * 2.5)
    .article-meta
      small
        font-size: font-size-small
        display: block
        position: absolute
        padding-top: small-padding
        padding-bottom: small-padding
        padding-right: 0.5rem
        --padding-small: 8.5rem
        padding-left: var(--padding-small)
        width: calc(100% - calc(var(--padding-small) + 0.5rem))
        border-radius: 0 border-radius 0 0
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        background-color: color-background
        /[data-theme="dark"] &
          background-color: dark-color-background
        span
          // text-transform: uppercase
          padding-right: 3px
          opacity: 0.5
        a
          text-decoration: none
  img
    max-width: 240px
    @media mq-normal
      max-width: 360px
    @media mq-tablet
      max-width: 320px
  span.caption
    display: none

.index-list
  margin-top: double-margin
  .article.note
    margin-top: double-margin + medium-margin
    margin-left: default-margin
    &:first-of-type
      margin-top: double-margin + default-margin
    @media mq-mobile
      margin-left: default-margin
    .article-meta
      time
        left: -(default-margin)
        @media mq-mobile
          left: -1.5rem
      small
        font-size: font-size-small
        --padding-small: 6rem
        padding-left: var(--padding-small)
        width: calc(100% - calc(var(--padding-small) + 0.5rem))
        // @media mq-mobile
        //   padding-left: 6rem
        //   width: calc(100% - 6.5rem)
          
.note-list
  .article.note
    margin-left: 2.5rem
    &:first-of-type
      margin-top: 1rem
    @media mq-mobile
      margin-left: default-margin
      margin-bottom: double-margin
    &:not(:last-child)::before
      content: ""
      display: block
      position: absolute
      height: calc(100% + 3rem)
      left: -1.5rem
      @media mq-mobile
        height: calc(100% + 3rem)
        left: calc(-1.4rem + 6px)
      top: 0
      border-color: var(--color-accent2)
      border-width: 1px
      border-style: solid
    .article-meta
      font-size: font-size-small
      time
        left: -2.75rem
        @media mq-mobile
          left: -1.5rem
      small
        --padding-small: 5rem
        padding-left: var(--padding-small)
        width: calc(100% - calc(var(--padding-small) + 0.5rem))
        @media mq-mobile
          --padding-small: 6rem
    .article-header a, .article-footer, .article-entry
      transition: all ease-out .3s
    .article-footer, .article-entry
      animation: slideUp ease 0.6s
      padding-top: 0

.note-list.condensed
  .article.note
    margin-bottom: default-margin
    &:not(:first-child)
      margin-top: block-margin
    &:not(:last-child)::before
      height: "calc(100% + %s)" % double-margin
    .article-entry, .article-footer
      height: 0
      padding: 0
      margin: 0
      overflow: hidden
      animation: slideDown ease 0.3s
    .article-header
      padding: 1.75rem 1rem 0.75rem 1rem
      a
        font-size: font-subtitle-size
        font-weight: font-weight-bold
        line-height: line-height
    &.rel
      .article-header
        padding: 2.5rem 1rem 0.5rem 1rem

.article-inner
  @extend $block-inner
  overflow: hidden
  margin-bottom: default-margin
  small.hidden-info
    display: block
    padding: (small-padding * 2) (small-padding * 3)
    font-size: font-size-medium
    opacity: 0.5
    background-color: color-background
    /[data-theme="dark"] &
      background-color: dark-color-background
    span
      margin-left: 24px
    &:before
      content: ""
      width: 16px
      height: 18px
      display: block
      position: absolute
      mask-image: url(/images/icons/circle-info.svg)
      mask-repeat: no-repeat
      mask-size: 16px
      mask-position: 0 2px
      background-color: var(--color-accent1)

.article-photo
  @extend $inview-image
  height: 150px
  @media mq-tablet
    height: 175px
  @media mq-normal-range
    height: 200px
  @media mq-large
    height: 250px
  width: 100%
  object-fit: cover

.article-photo.in-view
  @extend $inview-image-visible

.article-category
  position: absolute
  right: 0
  bottom: 0
  margin-bottom: small-margin
  margin-left: small-margin
  border: none
  &:hover
    a
      color: var(--color-accent1)
  .article-category-link
    @extend $block-caption
    color: color-header
    /[data-theme="dark"] &
      color: dark-color-header

.article-header
  padding: default-padding default-padding 0

.article-anything
  text-transform: uppercase
  text-decoration: none
  display: inline-block
  font-size: font-size-medium
  margin-bottom: small-margin
  margin-right: small-margin
  color: color-grey
  /[data-theme="dark"] &
    color: dark-color-grey
  &:hover
    color: var(--color-accent1)

.article-title
  position: relative
  z-index: 0
  display: table
  text-decoration: none
  font-weight: font-weight-bold
  letter-spacing: -1px
  font-size: font-title-size
  line-height: line-height-title
  transition: color 0.4s
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default
  em
    opacity: 0.6
  strong 
    opacity: 0.2
  a&:hover
    color: var(--color-accent1)
    em, strong
      opacity: 1
  // https://css-tricks.com/adam-argyles-sick-mouse-out-css-hover-effect/
  a&:before
    position: absolute
    z-index: -1
    display: table-cell
    margin: -3px -9px
    background: color-hover-background
    /[data-theme="dark"] &
      background: dark-color-hover-background
    content: ""
    border-radius: border-radius
    inset: 0
    transform: scaleX(0)
    transform-origin: right
    transition: transform 0.4s ease-in-out
  a&:hover
    &:before
      transform: scaleX(1)
      transform-origin: left

.article-subtitle
  font-size: font-subtitle-size
  line-height: line-height
  margin-top: default-margin
  color: color-header

.article-entry
  @extend $base-style
  clearfix()
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default
  padding: 0 default-padding
  .float-element 
    display: block
    float: right
    margin: line-height 0 line-height line-height
  p, table
    margin: default-margin 0
    line-height: line-height-text
  h1, h2, h3, h5
    font-weight: font-weight-bold
  h4, h6
    font-weight: font-weight-normal
  h1, h2, h3, h4, h5, h6
    line-height: line-height-title
    margin: (line-height-title) 0 (line-height-title / 2)
  hr + h1, hr + h2, hr + h3
    margin: (line-height-title / 3) 0 (line-height-title / 2)
  a:not([class]), a.u-in-reply-to
    text-decoration: none
    white-space: pre-line
    word-break: break-word
    border-bottom: color-border-3d 1px dashed
    /[data-theme="dark"] &
      border-bottom: dark-color-border-3d 1px dashed
    &:hover
      border-bottom: var(--color-accent1) 1px solid
  a.img-link
    transition: all ease-out .6s 
    transform: scale(1)
    opacity: 0.75
    filter: filter-gray
    /[data-theme="dark"] &
      opacity: 0.75
      filter: dark-filter-gray
  a.img-link.in-view
    transform: scale(1.0125)
    opacity: 1
    filter: grayscale(0) contrast(1)
    /[data-theme="dark"] &
      opacity: 1
      filter: grayscale(0) contrast(1) brightness(0.75)
    &:hover
      transform: scale(1.025)
  ul, ol, dl
    margin-top: default-margin
    margin-bottom: default-margin
    li
      margin-bottom: 6px
  label.moreinfo
    display: block
    margin-top: default-margin
    font-style: italic
    ~ ul
      margin-top: small-margin
  img, video
    max-width: 100%
    height: auto
    display: block
    margin: auto
    /[data-theme="dark"] &:not(.image-compare)
      filter: brightness(85%)
  img.limit 
    max-width: 240px
    @media mq-normal
      max-width: 360px
    @media mq-tablet
      max-width: 320px
  .image-compare.image-modified
    max-width: none
    height: 100%
  .image-masonry 
    img
      border-radius: border-radius-small
  .float-matchgrid
    display: grid
    float: right
    margin: default-margin 0 default-margin default-margin
    grid-template-columns: 1fr max-content 1fr
    img
      width: clamp(64px,8vw,100px)
    span
      padding: medium-margin
      @media mq-mobile
        padding: small-margin
      font-weight: font-weight-extrabold
      font-size: clamp(1.75rem, 6vw, 2.5rem)
      align-self: center
  h2 + small.link
    display: block
    margin: -1rem 0 2rem 0
  iframe
    border: none
  table
    width: 100%
    border-collapse: collapse
    border-spacing: 0
  th
    font-weight: font-weight-bold
    padding-bottom: small-margin
    border-bottom: 3px solid color-border-article
    /[data-theme="dark"] &
      border-bottom: 3px solid dark-color-border-article
  td
    border-bottom: 1px solid color-border-article
    /[data-theme="dark"] &
      border-bottom: 1px solid dark-color-border-article
  details
    margin-top: 2px
    &:hover summary
      font-weight: font-weight-bold
    &[open]
      margin-bottom: 20px
      summary 
        font-weight: font-weight-bold
    summary
      cursor: pointer
      padding: 5px 0
      ~ ul
        margin-top: small-margin
    blockquote
      margin-top: 10px
      margin-left: 20px
      & +
        cite
          margin-left: 20px
  details.github-readme
    margin: 0 -30px
    padding: 10px 25px
    border-left: 6px color-github solid  
    &[open]
      background-color: dark-color-github
      /[data-theme="dark"] &
        background-color: color-github
      summary
        background-color: dark-color-github
        /[data-theme="dark"] &
          background-color: color-github
    summary
      padding: 10px
      margin: -10px 0 -10px -10px
    pre
      margin: 0 -25px
      background-color: color-block
      /[data-theme="dark"] &
        background-color: dark-color-block
  blockquote //like alertbox
    position: relative
    padding: 1px 35px
    margin: default-margin 0 0
    text-align: left
    font-style: italic
    background-color: rgba(205,205,205,0.2)
    border-left: 4px rgba(205,205,205,0.75) solid 
    &:before
      position: absolute
      width: 41px
      height: 41px
      top: -13px
      left: -22px
      display: block
      border-radius: 50%
      content: ""
      background: color-block
      /[data-theme="dark"] &
        background: dark-color-block  
    &:after
      display: block
      position: absolute
      top: -2px
      left: -12px
      display: inline-block
      content: ""
      background-repeat: no-repeat
      background-position: 0 0
      background-size: 24px
      width: 24px
      height: 24px
      //see /images/icons/quote.svg + fill rgb-color
      background-image: url("data:image/svg+xml,%3Csvg version='1.1' xmlns='http://www.w3.org/2000/svg' xmlns:xlink='http://www.w3.org/1999/xlink' xml:space='preserve' viewBox='0 0 24 24' fill='rgba(205,205,205,0.75)'%3E%3Cpath d='M20.309 17.708C22.196 15.66 22.006 13.03 22 13V5a1 1 0 0 0-1-1h-6c-1.103 0-2 .897-2 2v7a1 1 0 0 0 1 1h3.078a2.89 2.89 0 0 1-.429 1.396c-.508.801-1.465 1.348-2.846 1.624l-.803.16V20h1c2.783 0 4.906-.771 6.309-2.292zm-11.007 0C11.19 15.66 10.999 13.03 10.993 13V5a1 1 0 0 0-1-1h-6c-1.103 0-2 .897-2 2v7a1 1 0 0 0 1 1h3.078a2.89 2.89 0 0 1-.429 1.396c-.508.801-1.465 1.348-2.846 1.624l-.803.16V20h1c2.783 0 4.906-.771 6.309-2.292z'/%3E%3C/svg%3E")
    & +
      cite
        display: block
        margin: 0
        padding: 0 10px 10px
        background-color: rgba(205,205,205,0.2)
        border-left: 4px rgba(205,205,205,0.75) solid
        a
          color: rgb(200,200,200) !important
          border: none !important
          &:hover
            border: none !important
            color: var(--color-accent) !important
    ol, ul
      margin-top: 0
      margin-bottom: 0
    p
      line-height: line-height-text
      margin: medium-margin 0
    footer
      font-size: font-size
      margin: line-height 0
      font-family: font-sans
      cite
        &:before
          content: "—"
          padding: 0 small-margin
  .pullquote
    text-align: left
    width: 45%
    margin: 0
    &.left
      margin-left: small-margin
      margin-right: medium-margin
    &.right
      margin-right: small-margin
      margin-left: medium-margin
  .caption
    color: color-grey
    /[data-theme="dark"] &
      color: dark-color-grey
    display: block
    font-size: font-size-medium
    font-style: italic
    opacity: 0.6
    margin-top: small-margin
    position: relative
    text-align: center
  // http://webdesignerwall.com/tutorials/css-elastic-videos
  .video-container
    position: relative
    padding-top: (9 / 16 * 100)% // 16:9 ratio
    height: 0
    overflow: hidden
    iframe, object, embed
      position: absolute
      top: 0
      left: 0
      width: 100%
      height: 100%
      margin-top: 0
  .photo-list
    display: flex
    flex-wrap: wrap
    justify-content: center
    gap: 2rem
    margin-block-start: 2rem
    figure
      img
        border-radius: 4px
        box-shadow: 1px 1px 12px 0px #888 !important
        /[data-theme="dark"] &
          box-shadow: 1px 1px 12px 0px #000 !important
      figcaption
        text-align: center
        padding-block: 0.75rem
        font-style: italic
        color: color-grey
        /[data-theme="dark"] &
          color: dark-color-grey


.article-more-link,
.download-link
  margin-block-end: small-margin !important

.article-more-link
  position: relative
  font-size: font-size-small
  text-transform: uppercase
  a
    padding-left: 14px
  &:before
    display: block
    position: absolute
    left: -6px
    top: -2px
    width: 18px
    height: 18px
    content: ""
    mask-image: url(/images/icons/chevron-right.svg)
    mask-repeat: no-repeat
    mask-size: 18px
    mask-position: 0 4px
    background-color: var(--color-accent1)

.button:not(.posts)
  display: inline-block
  text-align: center
  font-size: font-size
  position: relative
  text-decoration: none
  padding: (default-padding-vert/2) (default-padding/2)
  background-color: color-button
  color: color-button-link
  border: none
  border-radius: border-radius-small
  &:hover    
    background-color: var(--color-accent1)
    color: color-logo
  /[data-theme="dark"] &
    background-color: dark-color-button
    color: dark-color-button-link

.download-link
  margin: default-margin 0 !important
  text-align: center
  @media mq-mobile
    a
      strong 
        display: inline-block

.article-share
  @extend $base-style
  margin-top: -(default-margin)
  min-height: auto
  border-top: none
  display: flex
  flex-direction: row-reverse
  button.share
    align-content: right
    text-decoration: none
    padding: small-margin medium-margin
    border: none
    border-bottom-left-radius: 4px
    border-bottom-right-radius: 4px
    transition: all ease-out .2s
    z-index: 1
    box-shadow: inset 0 20px 20px -20px #aaa
    color: var(--color-accent1)
    background-color: color-wm-button-background
    /[data-theme="dark"] &
      box-shadow: inset 0 20px 20px -20px #000
      background-color: dark-color-wm-button-background
    &:focus
      outline: none
    &:hover
      box-shadow: inset 0 20px 20px -20px #666
      color: color-hover-background
      background-color: var(--color-accent1)
      /[data-theme="dark"] &
        box-shadow: inset 0 20px 20px -20px #222
        color: dark-color-hover-background

.article-syndication,
.article-webmention,
.article-interactions,
.article-related
  min-height: 86px 
  padding-bottom: default-padding
  border-bottom-style: solid
  border-bottom-width: 1px
  border-bottom-color: color-block
  /[data-theme="dark"] &
    border-bottom-color: dark-color-border
  > h2
    @extend $block-caption
    color: color-header
    /[data-theme="dark"] &
      color: dark-color-header
    font-size: font-subtitle-size
    line-height: line-height
    margin: default-margin 0
  
.article-syndication
  padding-bottom: (default-padding/2)
  .syndication-wrapper
    display: flex
    flex-wrap: wrap
    margin-left: -1rem
    a.syndication-link /* on extension see config.syndication_hosts */
      padding: 0.3rem 0.15rem 0.3rem 2.4rem
      text-decoration: none
      overflow-wrap: break-word
      background-size: 20px 20px
      background-repeat: no-repeat
      background-position: 1rem 0.5rem
      text-decoration: none
      color: color-link
      /[data-theme="dark"] &
        color: dark-color-link
      span
        border-bottom: transparent 1px solid
        /[data-theme="dark"] &
          opacity: 0.75
        &:hover
          border-bottom: color-link 1px solid
          /[data-theme="dark"] &
            border-bottom: dark-color-link 1px solid
      &.host-500px
        background-image: url(/images/icons/500px.svg)
        background-size: 16px
        background-position: 15px 6px
        /[data-theme="dark"] &
          filter: invert(1)
        span
          /[data-theme="dark"] &
            filter: invert(1)
      &.host-flickr
        background-image: url(/images/icons/flickr.svg)
        background-size: 20px
        background-position: 10px 6px
      &.host-pixelfed
        background-image: url(/images/icons/pixelfed.svg)
        background-size: 16px
        background-position: 15px 7px
        /[data-theme="dark"] &
          background-image: url(/images/icons/pixelfed_invert.svg)
      &.host-unsplash
        background-image: url(/images/icons/unsplash.svg)
        background-size: 16px
        background-position: 14px 6px
        /[data-theme="dark"] &
          filter: invert(1)
        span
          /[data-theme="dark"] &
            filter: invert(1)
      &.host-twitter
        background-image: url(/images/icons/twitter.svg)
        background-size: 16px
        background-position: 14px 8px
      &.host-mastodon
        background-image: url(/images/icons/mastodon.svg)
        background-size: 16px
        background-position: 14px 7px
      &.host-indienews
        background-image: url(/images/icons/indieweb.svg)
        background-size: 20px
        background-position: 12px 4px
      &.host-devto
        background-image: url(/images/icons/devto.svg)
        background-size: 16px
        background-position: 13px 5px
        /[data-theme="dark"] &
          filter: invert(1)
        span
          /[data-theme="dark"] &
            filter: invert(1)

.article-webmention
  @extend $base-style
  min-height: auto
  border-top: none
  position: relative
  margin-top: default-margin
  &:before
    display: block
    position: absolute 
    left: -35px
    top: -15px
    content: ""
    background-image: url(/images/icons/feather.svg)
    background-repeat: no-repeat
    background-position: 0 0
    background-size: 100px
    width: 100px
    height: 100px
    z-index: -1
    transform: rotate(344deg)
    color: color-block
    filter: invert(1)
    /[data-theme="dark"] &
      filter: invert(0)
      color: dark-color-border
  p
    opacity: .75
    a
      text-decoration: none
      border-bottom: transparent 1px solid
      &:hover
        border-bottom: var(--color-accent1) 1px solid
  .alertbox
    margin-bottom: 0

.article-related
  margin-bottom: -(medium-margin)
  padding-bottom: default-padding-vert
  > h2
    margin-bottom: small-margin

.article-footer, 
.section-footer
  font-size: font-size-small
  // padding-top: (default-padding / 2)
  margin: 0 default-padding default-margin
  display: grid
  gap: 0 0
  grid-template-columns: auto 1fr
  grid-template-rows: auto 1fr auto
  grid-template-areas: "tags tags" "syndication permalink" "golem golem"
  @media mq-mobile
    margin: 0 (default-padding / 2) default-padding-vert
    grid-template-columns: auto 1fr
    grid-template-rows: auto auto auto
    grid-template-areas: "tags" "syndication permalink" "golem"

// .article-footer:empty
//   margin-bottom: small-margin

.section-footer
  padding: 0
  margin: -(medium-margin)

.article-tags { grid-area: tags }
.article-permalink { grid-area: permalink }
// .article-syndication { grid-area: syndication }
.article-golem { grid-area: golem }

.article-tags,
// .article-syndication,
.article-permalink,
.article-golem
  a, span
    text-decoration: none
    color: color-grey
    /[data-theme="dark"] &
      color: dark-color-grey
  a:hover
    color: var(--color-accent1)

.article-tags,
// .article-syndication,
.article-permalink
  opacity: 0.5
  transition: all ease-out .4s
.article-footer:hover
  .article-tags,
  // .article-syndication,
  .article-permalink
    opacity: 1

.article-permalink
// .article-syndication 
  padding-top: line-height
  margin-top: line-height
  border-top: 1px color-border solid
  /[data-theme="dark"] &
    border-top: 1px dark-color-border solid
  @media mq-mobile
    padding-top: line-height * 0.6
    margin-top: line-height * 0.6

.article-permalink
  display: flex
  flex-direction: row
  font-size: font-size-small
  padding-left: 50px
  @media mq-mobile
    padding-left: 30px
  a
    cursor: pointer
  input
    font-size: font-size-medium
    font-family: font-sans
    background: transparent
