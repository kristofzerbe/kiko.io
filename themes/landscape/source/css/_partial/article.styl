.article
  margin: var(--space-block) 0
  position: relative

.article-meta
  //clearfix()...
  &:before, &:after
    content: "";
    display: table
  &:after
    clear: both
  position: relative
  z-index: 99
  font-size: var(--font-size-medium)

.article-date
  color: var(--color-meta)
  float: left
  margin-bottom: var(--space-small)
  margin-right: var(--space-default)
  letter-spacing: 0
  time.updated
    display: block
    line-height: var(--line-height-tiny)
    color: var(--color-text)
    &:before
      content: "Update, "

.article.note
  &:not(:first-child)
    margin-top: var(--space-double)
  &.h-entry
    margin-top: calc(var(--space-double) + var(--space-medium))
  .article-header
    padding-top: var(--space-double)
  .article-meta
    time
      top: calc(var(--space-medium) * -1)
      left: var(--space-medium)
      position: absolute
      z-index: 99
      padding: var(--space-thin) var(--space-median)
      font-size: var(--font-size-small)
      font-weight: var(--font-weight-bold)
      border-radius: var(--border-radius-small)
      text-transform: uppercase
      color: var(--color-logo)
      background-color: var(--color-accent)
    small
      display: none
  &.rel
    .article-header
      padding-top: var(--space-large)
    .article-meta
      small
        font-size: var(--font-size-small)
        display: block
        position: absolute
        padding-top: var(--space-thin)
        padding-bottom: var(--space-thin)
        padding-right: var(--space-small)
        --padding-small: 8.5rem
        padding-left: var(--padding-small)
        width: calc(100% - calc(var(--padding-small) + var(--space-small)))
        border-radius: 0 var(--border-radius-normal) 0 0
        white-space: nowrap
        overflow: hidden
        text-overflow: ellipsis
        background-color: var(--color-background)
        span
          padding-right: 3px
          opacity: 0.5
        a
          text-decoration: none
  img
    max-width: 240px
    @media mq-normal
      max-width: 360px
    @media mq-tablet
      max-width: 320px
  span.caption
    display: none

.index-list
  margin-top: var(--space-double)
  .article.note
    margin-top: calc(var(--space-double) + var(--space-medium))
    margin-left: var(--space-default)
    &:first-of-type
      margin-top: calc(var(--space-double) + var(--space-default))
    @media mq-mobile
      margin-left: var(--space-default)
    .article-meta
      time
        left: calc(var(--space-default) * -1)
        @media mq-mobile
          left: -1.5rem
      small
        font-size: var(--font-size-small)
        --padding-small: 6rem
        padding-left: var(--padding-small)
        width: calc(100% - calc(var(--padding-small) + var(--space-small)))

.note-list
  .article.note
    margin-left: var(--space-block)
    &:first-of-type
      margin-top: var(--space-medium)
    @media mq-mobile
      margin-left: var(--space-default)
      margin-bottom: var(--space-double)
    &:not(:last-child)::before
      content: ""
      display: block
      position: absolute
      height: calc(100% + var(--space-double))
      left: calc(var(--space-default) * -1)
      @media mq-mobile
        height: calc(100% + var(--space-double))
        left: calc((var(--space-default) * -1) + var(--space-small))
      top: 0
      border-color: var(--color-accent)
      border-width: 1px
      border-style: solid
    .article-meta
      font-size: var(--font-size-small)
      time
        left: -2.75rem
        @media mq-mobile
          left: -1.5rem
      small
        --padding-small: 5rem
        padding-left: var(--padding-small)
        width: calc(100% - calc(var(--padding-small) + var(--space-small)))
        @media mq-mobile
          --padding-small: 6rem
    .article-header a, .article-footer, .article-entry
      transition: all ease-out .3s
    .article-footer, .article-entry
      animation: slideUp ease 0.6s
      padding-top: 0

.note-list.condensed
  .article.note
    margin-bottom: var(--space-default)
    &:not(:first-child)
      margin-top: var(--space-block)
    &:not(:last-child)::before
      height: calc(100% + var(--space-double))
    .article-entry, .article-footer
      height: 0
      padding: 0
      margin: 0
      overflow: hidden
      animation: slideDown ease 0.3s
    .article-header
      padding: var(--space-extra) var(--space-medium) var(--space-median) var(--space-medium)
      a
        font-size: var(--font-subtitle-size)
        font-weight: var(--font-weight-bold)
        line-height: var(--line-height-normal)
    &.rel
      .article-header
        padding: var(--space-block) var(--space-medium) var(--space-small) var(--space-medium)

.article-inner
  margin-bottom: var(--space-default)
  small.top-info,
  small.top-exclamation
    display: block
    padding: var(--space-small) var(--space-median)
    font-size: var(--font-size-small)
    span
      display: block
      margin-left: var(--space-default)
      line-height: var(--line-height-small)
      opacity: 0.5
    &:before
      content: ""
      width: 20px
      height: 20px
      display: block
      position: absolute
      mask-repeat: no-repeat
      mask-size: 16px
      mask-position: 0 2px

  small.top-info
    background-color: var(--box-note2)
    &:before
      mask-image: url(/images/icons/circle-info.svg)
      background-color: var(--color-accent-text)
  small.top-exclamation
    background-color: var(--box-exclamation2)
    &:before
      mask-image: url(/images/icons/circle-exclamation.svg)
      background-color: var(--box-exclamation)
  details.bandcamp
    --bc-margin: 0.5rem
    --bc-padding: 1.5rem
    width: calc(100% - calc(var(--bc-margin) * 2))
    margin-block: var(--bc-margin) 0
    margin-inline: var(--bc-margin)
    display: grid
    justify-items: end
    cursor: pointer
    &::marker
      display:none
      content: ""
    summary
      list-style: none
      padding: 0
      em
        display: inline-block
        margin-right: calc(var(--bc-padding) / 2)
        font-variant: all-small-caps
        color: var(--color-meta)
        transition: all ease-out 0.2s
      svg
        width: var(--bc-padding)
        height: var(--bc-padding)
        float: right
        transition: all ease-out 0.2s
    &:hover, &[open]
      summary
        font-weight: inherit
    &[open]
      summary
        em
          opacity: 0.333
          font-style: normal
      svg
        transform: rotate(-20deg)
    @media mq-mobile-up
      iframe
        min-width: 400px

.article-photo
  height: 150px
  @media mq-tablet
    height: 175px
  @media mq-normal-range
    height: 200px
  @media mq-large
    height: 250px
  width: 100%
  object-fit: cover

.article-category
  position: absolute
  right: 0
  bottom: 0
  margin-bottom: var(--space-small)
  margin-left: var(--space-small)
  border: none
  &:hover
    a
      color: var(--color-accent-text)
  .article-category-link
    color: var(--color-meta)

