.webmentions-placeholder
  .wm-placeholder
    opacity: 0.75
    font-style: italic
    
.webmention
  margin: medium-margin 0
  font-size: .9rem
  overflow: hidden
  a
    color: inherit
    text-decoration: none
    word-wrap: break-word
    &:hover
      text-decoration: underline
  .wm-card
    display: flex
    flex-direction: row
    flex-wrap: nowrap
    .wm-photo-link
      height: 42px
      margin-right: 8px /* + 42 photo = 50 left content*/
      .wm-photo
        max-width: 42px
        border-radius: 50%
    .wm-meta
      position: relative
      width: 100%
      display: grid
      grid-template-areas: "name name verb date no"
      grid-template-columns: max-content max-content max-content max-content auto
      grid-template-rows: auto
      align-items: center
      column-gap: 5px
      padding: (default-padding-vert / 3) (default-padding-vert / 2)
      border-top-left-radius: border-radius
      border-top-right-radius: border-radius
      border-width: 1px
      border-style: solid 
      border-color: color-wm-border
      background-color: color-wm-meta-background
      /[data-theme="dark"] &
        border-color: dark-color-wm-border
        background-color: dark-color-wm-meta-background
      @media mq-mobile
        grid-template-areas: "name name name" "verb date no"
        grid-template-columns: max-content max-content auto
        grid-template-rows: auto
      .wm-name
        grid-area: name
        font-weight: font-weight-bold
        max-width: 220px
        white-space: nowrap
        text-overflow: ellipsis
        overflow: hidden
        &:hover
          text-decoration: none
          span
            text-decoration: underline
      .wm-name
        &:before
          margin-right: 5px
          font-family: fa-icons
          &:hover
            text-decoration: none
      .wm-name.wm-source-web
        &:before
          content: icon-mastodon
      .wm-name.wm-source-twitter
        &:before
          content: icon-twitter
          color: color-twitter
      .wm-name.wm-source-mastodon
        &:before
          content: icon-mastodon
          color: color-mastodon
      .wm-name.wm-source-instagram
        &:before
          content: icon-instagram
          color: color-instagram
      .wm-name.wm-source-facebook
        &:before
          content: icon-facebook
          color: color-facebook
      .wm-name.wm-source-flickr
        &:before
          content: icon-flickr
          color: color-flickr
      .wm-name.wm-source-reddit
        &:before
          content: icon-reddit
          color: color-reddit
      .wm-verb
        grid-area: verb
        display: inline-block
      .wm-date
        grid-area: date
      small
        grid-area: no
        margin-left: auto
        opacity: 0.25
        font-size: font-size-small
    .wm-meta.wm-own
      color: var(--color-accent)

  .wm-content
    padding: (default-padding-vert / 3) (default-padding / 2)
    margin-left: 50px
    line-height: 1.33rem
    border-bottom-left-radius: border-radius
    border-bottom-right-radius: border-radius
    border-width: 1px
    border-style: solid
    border-color: color-wm-border
    background-color: color-wm-content-background
    /[data-theme="dark"] &
      border-color: dark-color-wm-border
      background-color: dark-color-wm-content-background
    border-top: 0
    > p
      margin: 4px 0 8px
      ~ .wm-source
        margin-bottom: 8px
    a
      @extend $neutral-anchor
      opacity: 0.66
    .wm-source
      display: inline-block
      word-break: break-all
.webmention.wm-liked, .webmention.wm-bookmarked
  .wm-meta
    border-bottom-left-radius: border-radius
    border-bottom-right-radius: border-radius

.webmention-form
  margin-top: default-margin
  display: grid
  column-gap: 20px
  row-gap: 10px
  align-items: center
  grid-template: "info info" "source submit"
  grid-template-columns: 1fr max-content
  grid-template-rows: auto auto
  @media mq-mobile
    grid-template: "info" "source" "submit"
    grid-template-columns: 1fr
  p
    grid-area: info
  input
    padding: small-margin medium-margin
    border-radius: border-radius-small
  label
    grid-area: label
    opacity: 0.75
  input[type=url]
    grid-area: source
    font-family: inherit
    border-width: 1px
    border-style: solid
    border-color: color-wm-border
    /[data-theme="dark"] &
      background-color: dark-color-wm-content-background
      border-color: dark-color-wm-border
    &:focus
      outline: none
    +placeholder()
      opacity: 0.4
  input[type=submit]
    grid-area: submit
    cursor: pointer
    color: color-wm-button
    border: none
    background-color: color-wm-button-background
    /[data-theme="dark"] &
      color: dark-color-wm-button
      background-color: dark-color-wm-button-background
