.page-title
  font-size: 1.6em
  font-weight: 600
  line-height: line-height-title
  text-transform: uppercase
  margin-top: line-height-title
  margin-bottom: 1em
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default

.page-subtitle
  font-size: 1.2em
  font-weight: 400
  line-height: line-height-title
  text-transform: uppercase
  margin-top: -0.5em
  margin-bottom: 2em
  color: color-grey
  /[data-theme="dark"] &
    color: dark-color-grey  

.page-content
  section 
      @extend $block
      @extend $base-style
      margin: 2em 0
      padding: 2em
      overflow: hidden
      background: color-block
      box-shadow: 1px 2px 3px color-border
      border: 1px solid color-border
      border-radius: border-radius
      color: color-default
      /[data-theme="dark"] &
        background: dark-color-block
        box-shadow: 1px 2px 3px dark-color-border
        border-color: dark-color-border
        color: dark-color-default
      p, table
        line-height: line-height
        margin: line-height 0
      p:last-child
        margin-bottom: 0
      h1:first-child
        margin-top: 0
      h1, h2, h3, h5
        font-weight: 600
      h4, h6
        font-weight: 400
      h1, h2, h3, h4, h5, h6
        line-height: line-height-title
        margin: 1em 0 0.75em
      a
        text-decoration: none
        color: color-link
        /[data-theme="dark"] &
          color: dark-color-link
          border-bottom: dark-color-link-border 1px solid
        &:hover
          border-bottom: color-link 1px solid
          /[data-theme="dark"] &
            border-bottom: dark-color-link 1px solid
      ul, ol, dl
        margin-top: line-height
        margin-bottom: line-height
      fieldset
        span.result
          position: absolute 
          right: 0
        span.result.error
          color: color-error
      time
        font-size: .85em
        margin-bottom: -20px
        position: absolute
        color: color-header
        /[data-theme="dark"] &
          color: dark-color-header
    section.flex
      display: flex
      flex-wrap: wrap
      fieldset
        flex: 1 1 auto
      fieldset.gap
        margin-right: 2em
        margin-bottom: auto;
      fieldset.max
        max-width: max-content
      @media mq-mobile
        fieldset.gap
          width: 100%
          margin-right: auto;
          margin-bottom: 1em
        fieldset.max
          max-width: 25%
        fieldset.max.expand
          max-width: 75%

    .switch-view
      margin: 1em 0.25em
      display: flex
      flex-direction: row
      justify-content: flex-end
      gap: 1em
      .info
        margin-right: auto
        line-height: 2em
        font-weight: bold
      input[type=radio] 
        display: none
        + label
          font-size: 1.5em
          opacity: 0.25
          cursor: pointer
          &::before
            display: inline-block
            font-size: inherit
            text-rendering: auto
            -webkit-font-smoothing: antialiased
            font-family: FontAwesome5Solid
        &:checked
          + label
            opacity: 1
      input#switch-grid
        + label
          &::before
            content: icon-grid
      input#switch-list
        + label
          &::before
            content: icon-list
      

    .list
      display: flex
      flex-direction: column
      flex-wrap: nowrap
      margin-bottom: 2em
      .card
        padding: .5em .5em 0 .5em
        margin: .5em 0
        display: grid
        .card-img
          grid-area: image
          margin-right: 1em
          margin-top: -0.5em
          margin-left: -0.5em
          float: left;
        h3
          margin: .5em 0 1em 0
          font-size: 110%
          grid-area: title
          overflow: hidden
          a
            display: block
            white-space: nowrap
            overflow: hidden
            text-overflow: ellipsis
        small, p
          display: none
      .card.tiny-tools
        grid-template-columns: 90px auto
        grid-template-areas: "image title" "image tags"
        .card-img
          height: 82px
          img
            height: 100%
        .tags
          grid-area: tags
          margin: 0
          margin-bottom: 0.5em
      .card.photo
        grid-template-columns: 160px auto
        grid-template-areas: "status status" "image title" "image link"
        .card-img
          height: 90px
          min-width: 150px
          overflow: hidden
          border-radius: 0 0 0 4px
          img
            width: 100%
        a.icon-link
          bottom: -.5em
        span.pre-title
          grid-area: link
          margin-bottom: 5px
        .status
          grid-area: status
          margin: -.5em -.5em .5em

    .grid
      display: grid
      grid-gap: 2em
      grid-template-columns: repeat(auto-fill, minmax(220px,1fr))
      margin-bottom: 3em
      .card
        padding: 1em
        .card-img
          margin: -1em -1em 0 -1em
          height: auto
          img
            width: 100%
            height: 100%
            object-fit: cover
        h3
          margin: 1rem 0 0.25rem
      .card.tiny-tools
        div.tags
          margin: 1rem 0 0.75rem
      .card.photo
        grid-template-areas: "status" "image" "text"
        .card-img
          grid-area: image
          img
            height: 160px
        span.pre-title
            display: block
            margin-top: 5px
        a.icon-link
          top: 185px
        .status
          grid-area: status
          margin: -1em -1em 1em -1em

    .view
      .card
        @extend $block
        @extend $base-style
        transition: all ease-out 0.3s
        transform: scale(1)
        opacity: 1
        border-radius: border-radius
        background: color-block
        box-shadow: 1px 2px 20px 5px color-border
        border: none
        color: color-default
        /[data-theme="dark"] &
          background: dark-color-block
          box-shadow: 1px 2px 40px 1px dark-color-border
          border-color: dark-color-border
          color: dark-color-default
        a
          text-decoration: none
          word-break: break-all
          display: inline-block
        a.icon-link
          position: absolute
          right: 12px
          opacity: 0.33
          &:hover
            opacity: 1
          img
            width: 42px;
        .card-img
          display: block
          position: relative
          filter: grayscale(0.5) contrast(0.5)
          transition: all ease-out 0.6s
          img
            background-color: color-background
            /[data-theme="dark"] &
              background-color: dark-color-background
        h3
          line-height: line-height-title
          font-weight: 600
          // white-space: nowrap
          // overflow: hidden
          // text-overflow: ellipsis
          a
            text-decoration: none
            color: color-default
            /[data-theme="dark"] &
              color: dark-color-default
              border-bottom: dark-color-link-border 1px solid
            &:hover
              color: color-link
              /[data-theme="dark"] &
                color: dark-color-link
        &:hover
          transform: scale(1) translateY(-1px)
          box-shadow: 1px 2px 20px 5px color-border-3d
          /[data-theme="dark"] &
            box-shadow: 1px 2px 20px 5px dark-color-border-3d
        .card-img.in-view
          filter: grayscale(0) contrast(1)        
      .card.tiny-tools
        .card-img
          img
            border-bottom: 1px color-background solid
            /[data-theme="dark"] &
              border-bottom: 1px dark-color-background solid
        div.tags 
          display: flex
          flex-flow: row wrap
          span, a.tag 
            display: block
            border-radius: 2px
            padding: 3px 6px
            margin: 0 5px 5px 0
            text-transform: uppercase
            font-size: 0.75rem
            background-color: color-light
            color: color-grey
            /[data-theme="dark"] &
              background-color: dark-color-light
              color: dark-color-grey
            &:before
              font-family: fa-icon-solid
              content: icon-cat
              margin-right: 5px
              color: color-border
              /[data-theme="dark"] &
                color: dark-color-border
      .card.photo
        span.pre-title
          font-size: .85em;
          opacity: 0.5
        .status
          display: block
          white-space: nowrap
          overflow: hidden
          text-overflow: ellipsis
          padding: 5px 8px 7px
          opacity: 0.75
          border-radius: 4px 4px 0 0
          color: white
          &.used.post
            background-color: rgba(65,117,212,0.6)
          &.used.page
            background-color: rgba(95,158,160,0.9)
          &.used.dynamic
            background-color: rgba(65,70,167,0.5)
          &.pool
            background-color: rgba(159,159,159,0.99)
        &:hover
          .status
            opacity: 1
      .card.hide
      .card.trans
        transform: scale(0)
        opacity: 0



