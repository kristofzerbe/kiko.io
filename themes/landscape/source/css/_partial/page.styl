.page-title
  font-size: 1.6em
  font-weight: 600
  line-height: line-height-title
  text-transform: uppercase
  margin-top: 1em
  margin-bottom: 1em
  color: color-default
  /[data-theme="dark"] &
    color: dark-color-default

.page-subtitle
  font-size: 1.2em
  font-weight: 400
  line-height: line-height-title
  text-transform: uppercase
  margin-top: -0.5em
  color: color-grey
  /[data-theme="dark"] &
    color: dark-color-grey  

.page-content
  section 
      @extend $block
      @extend $base-style
      margin: 2em 0
      padding: 2em
      overflow: hidden
      background: color-block
      box-shadow: 1px 2px 3px color-border
      border: 1px solid color-border
      border-radius: border-radius
      color: color-default
      /[data-theme="dark"] &
        background: dark-color-block
        box-shadow: 1px 2px 3px dark-color-border
        border-color: dark-color-border
        color: dark-color-default
      p, table
        line-height: line-height
        margin: line-height 0
      p:last-child
        margin-bottom: 0
      h1:first-child
        margin-top: 0
      h1, h2, h3, h5
        font-weight: 600
      h4, h6
        font-weight: 400
      h1, h2, h3, h4, h5, h6
        line-height: line-height-title
        margin: 1em 0 0.75em
      a
        text-decoration: none
        color: color-link
        /[data-theme="dark"] &
          color: dark-color-link
          border-bottom: dark-color-link-border 1px solid
        &:hover
          border-bottom: color-link 1px solid
          /[data-theme="dark"] &
            border-bottom: dark-color-link 1px solid
      ul, ol, dl
        margin-top: line-height
        margin-bottom: line-height
      fieldset
        span.result
          position: absolute 
          right: 0
        span.result.error
          color: color-error
    section.flex
      display: flex
      flex-wrap: wrap
      fieldset
        flex: 1 1 auto
      fieldset.gap
        margin-right: 2em
        margin-bottom: auto;
      fieldset.max
        max-width: max-content
      @media mq-mobile
        fieldset.gap
          width: 100%
          margin-right: auto;
          margin-bottom: 1em
        fieldset.max
          max-width: 25%
        fieldset.max.expand
          max-width: 75%

    .grid
      display: grid
      grid-gap: 2em
      grid-template-columns: repeat(auto-fill, minmax(220px,1fr))
      margin-bottom: 3em
      .card
        @extend $block
        @extend $base-style
        padding: 1em
        transition: all ease-out 0.3s
        transform: scale(1)
        opacity: 1
        border-radius: border-radius
        background: color-block
        box-shadow: 1px 2px 20px 5px color-border
        border: 1px solid color-border
        color: color-default
        /[data-theme="dark"] &
          background: dark-color-block
          box-shadow: 1px 2px 40px 1px dark-color-border
          border-color: dark-color-border
          color: dark-color-default
        a
          text-decoration: none
          word-break: break-all
          display: inline-block
        a.card-img
          display: block
          position: relative
          height: auto
          margin: -1em -1em 0 -1em
          filter: grayscale(0.5) contrast(0.5)
          transition: all ease-out 0.6s
          img
            width: 100%
            height: 100%
            object-fit: cover
            aspect-ratio: 1
            background-color: color-background
            border-bottom: 1px color-background solid
            /[data-theme="dark"] &
              background-color: dark-color-background
              border-bottom: 1px dark-color-background solid
        &:hover
           transform: scale(1.01) translateY(-1px)
           box-shadow: 1px 2px 20px 5px color-border-3d
           /[data-theme="dark"] &
            box-shadow: 1px 2px 20px 5px dark-color-border-3d
        a.card-img.in-view
          filter: grayscale(0) contrast(1)
        .tags 
          display: flex
          flex-flow: row wrap
          margin: 1rem 0 0.75rem
          span 
            display: block
            border-radius: 2px
            padding: 3px 6px
            margin: 0 5px 5px 0
            text-transform: uppercase
            font-size: 0.75rem
            background-color: color-light
            color: color-grey
            /[data-theme="dark"] &
              background-color: dark-color-light
              color: dark-color-grey
            &:before
              font-family: fa-icon-solid
              content: icon-cat
              margin-right: 5px
              color: color-border
              /[data-theme="dark"] &
                color: dark-color-border
        h3
          line-height: line-height-title
          margin: 0.75rem 0 0.25rem
          font-weight: 600
          a
            text-decoration: none
            color: color-default
            /[data-theme="dark"] &
              color: dark-color-default
              border-bottom: dark-color-link-border 1px solid
            &:hover
              color: color-link
              /[data-theme="dark"] &
                color: dark-color-link
      .card.hide
      .card.trans
        transform: scale(0)
        opacity: 0



