.alertbox 
  position: relative
  padding: 20px 20px 20px 32px
  margin: 20px 0

.alertbox.thinkbox
  padding: 20px 40px 20px 45px
  margin: 40px 0 20px 10px
  background-color: rgba(255,203,76,0.1)
  background: linear-gradient(125deg, rgba(241,144,32,0.4) 0, rgba(241,144,32,0.1) 64px, rgba(255,203,76,0.1) 128px)


.alertbox.thinkbox svg
  width: 32px
  position absolute
  top: -2px
  left: -12px

.alertbox::before 
  position: absolute
  width: 41px
  height: 41px
  top: -12px
  left: -22px
  display: block
  border-radius: 50%
  content: ""
  background: color-block
  /[data-theme="dark"] &
    background: dark-color-block  

.alertbox.thinkbox::before
  width: 50px
  height: 50px
  top: -12px
  left: -22px

.alertbox.alertbox-exclamation
  border-left: 4px rgb(255,204,0) solid
  background-color: rgba(255,204,0,0.2)

.alertbox.alertbox-question
  border-left: 4px rgb(221,0,255) solid
  background-color: rgba(221,0,255,0.2)

.alertbox.alertbox-warning
  border-left: 4px rgb(226,37,0) solid
  background-color: rgba(226,37,0,0.2)

.alertbox.alertbox-info
  border-left: 4px rgb(0,136,224) solid
  background-color: rgba(0,136,224,0.2)

.alertbox.alertbox-success
  border-left: 4px rgb(0,187,28) solid
  background-color: rgba(0,187,28,0.2)

.alertbox.alertbox-note
  border-left: 4px rgb(205,205,205) solid
  background-color: rgba(205,205,205,0.2)

.alertbox.thinkbox h4
  position: absolute
  top: -16px
  left: 24px
  text-transform: uppercase
  color: #f19020
  font-size: 16px
  font-weight: bold

.alertbox::after 
  position: absolute
  display: block
  top: -8px
  left: -16px
  font-family: fa-icons
  font-size: 28px

.alertbox.alertbox-exclamation::after
  color: rgb(255,204,0)
  content: icon-exclamation-circle

.alertbox.alertbox-question::after
  color: rgb(221,0,255)
  content: icon-question-circle

.alertbox.alertbox-warning::after
  color: rgb(226,37,0)
  content: icon-times-circle

.alertbox.alertbox-info::after
  color: rgb(0,136,224)
  content: icon-info-circle

.alertbox.alertbox-success::after
  color: rgb(0,187,28)
  content: icon-check-circle

.alertbox.alertbox-note::after
  color: rgb(205,205,205)
  content: icon-quote
  font-size: 22px
  top: -3px
  left: -14px

.alertbox * 
  margin: 0 !important

.alertbox 
  p
    + p
      margin-top: 1em !important

li > .alertbox
  margin: 12px

li > .alertbox::before
  top: -17px