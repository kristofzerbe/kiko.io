.alertbox 
  position: relative
  padding: 20px 20px 20px 32px
  margin: 20px 0

.alertbox.no-block
  margin-left: 10px

.alertbox.thinkbox
  padding: 20px 40px 20px 45px
  margin: 40px 0 20px 10px
  background-color: rgba(255,203,76,0.1)
  background: linear-gradient(125deg, rgba(241,144,32,0.4) 0, rgba(241,144,32,0.1) 64px, rgba(255,203,76,0.1) 128px)

.alertbox.thinkbox h4
  position: absolute
  top: -16px
  left: 24px
  text-transform: uppercase
  color: #f19020
  font-size: 16px
  font-weight: var(--font-weight-bold)

.alertbox.thinkbox svg
  width: 32px
  position absolute
  top: -2px
  left: -12px

.alertbox::before 
  position: absolute
  width: 41px
  height: 41px
  top: -12px
  left: -22px
  display: block
  border-radius: 50%
  content: ""
  background: var(--color-block)

.alertbox.no-block::before
  background: var(--color-background)

.alertbox.thinkbox::before
  width: 50px
  height: 50px
  top: -12px
  left: -22px

.alertbox.alertbox-exclamation
  border-left: 4px var(--box-exclamation) solid
  background-color: var(--box-exclamation2)

.alertbox.alertbox-question
  border-left: 4px var(--box-question) solid
  background-color: var(--box-question2)

.alertbox.alertbox-warning
  border-left: 4px var(--box-warning) solid
  background-color: var(--box-warning2)

.alertbox.alertbox-info
  border-left: 4px var(--box-info) solid
  background-color: var(--box-info2)

.alertbox.alertbox-success
  border-left: 4px var(--box-success) solid
  background-color: var(--box-success2)

.alertbox.alertbox-note
  border-left: 4px var(--box-note) solid
  background-color: var(--box-note2)

.alertbox::after 
  position: absolute
  display: block
  top: -4px
  left: -14px
  content: ""
  background-repeat: no-repeat
  background-position: 0 0
  background-size: 26px
  width: 26px
  height: 26px

