if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  line-height: line-height
  word-wrap: break-word
  font-size: 1em
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.widget.about
  padding-bottom: 1em  
  * 
    display: block
    margin: 0 auto
  img 
    width: 120px
  h3, p
    text-align: center  
  h3 
    margin: 10px 0
    text-transform: uppercase
  p
    line-height: 18px
    font-size: 13px
    padding: 0 10%

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: color-grey
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-right: 5px
    display: inline-block
