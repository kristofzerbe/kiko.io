#sidebar
  margin-bottom: var(--space-block)
  font-size: var(--font-size-medium)
  @media mq-normal
    display: inline
    float: left
    width: 23%
    margin: 0 1%

.widget-wrap
  margin: var(--space-medium)
  line-height: var(--line-height-medium)
  @media mq-normal
    margin-right: 0

.widget-title
  @extend $block-caption
  margin: 0
  opacity: 0.33

.widget
  @extend $base-style
  word-wrap: break-word
  color: var(--color-text)
  background: transparent
  border: 1px solid transparent
  padding-left: var(--space-small)
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 var(--space-moderate)
    ul
      list-style: disc
    ol
      list-style: decimal
  ul, ol, dl
    ul, ol, dl
      margin-left: 1rem
      list-style: disc
    li
      border-left: 2px var(--color-border) solid
      margin: calc(var(--space-medium) / 3 * 2) 0 0 -12px
      padding-left: 10px
      a
        text-decoration: none
      &:hover
        border-left: 4px var(--color-accent) solid
        margin-left: -13px
        padding-left: 9px
        a 
          text-decoration: revert

.widget.about
  padding: var(--space-normal) 0 var(--space-small)
  *:not(i)
    display: block
    margin: 0 auto
  i 
    font-style: normal
  .avatar
    position: relative 
    width: 120px 
    border: 1px transparent solid
    a:not(.profile)
      border-radius: 50%;
      img 
        width: 120px
        border-radius: 50%;
        /[data-theme="dark"] &
          filter: brightness(85%)
    a.profile
      display: inline-block
      width: 20px
      height: 20px
      position: absolute
      filter: grayscale(1)
      /[data-theme="dark"] &
        filter: grayscale(1) invert(1)
      opacity: 0.4
      background-size: 16px
      background-repeat: no-repeat
      background-position: 2px
      &:hover
        filter: grayscale(0)
        opacity: 1 !important
      &.me-github
        background-image: var(--brand-github)
        background-size: 17px
        top: -29px
        right: 48px
        opacity: 0.3
        /[data-theme="dark"] &
          &:hover
            filter: invert(1)
      &.me-devto
        background-image: var(--brand-devto)
        background-size: 15px
        top: -22px
        right: 19px
        opacity: 0.25
        /[data-theme="dark"] &
          &:hover
            filter: invert(1)
      &.me-linkedin
        background-image: var(--brand-linkedin)
        background-size: 15px
        top: -4px
        right: -4px
      &.me-xing
        background-image: var(--brand-xing-mono)
        top: 23px
        right: -11px
        opacity: 0.3
        &:hover
          background-image: var(--brand-xing)
      &.me-500px
        background-image: var(--brand-500px)
        top: 52px
        right: -11px
        /[data-theme="dark"] &
          &:hover
            filter: invert(1)
      &.me-flickr
        background-image: var(--brand-flickr)
        top: 78px
        right: -6px
        width: 18px
      &.me-unsplash
        background-image: var(--brand-unsplash)
        background-size: 14px
        top: 99px
        right: -4px
        width: 24px
        opacity: 0.25
        /[data-theme="dark"] &
          &:hover
            filter: invert(1)
      &.me-pixelfed
        background-image: var(--brand-pixelfed)
        top: 118px
        right: 22px
        opacity: 0.5
        /[data-theme="dark"] &
          filter: grayscale(1) invert(0)
          background-image: var(--brand-pixelfed-invert)
          &:hover
            filter: grayscale(0)
      &.me-vernissage
        background-image: var(--brand-vernissage)
        background-size: 18px
        top: 127px
        right: 49px
        width: 18px
        opacity: 0.75
        /[data-theme="dark"] &
          &:hover
            filter: invert(1)
      &.me-peertube
        background-image: var(--brand-peertube)
        background-size: 12px
        top: 121px
        right: 69px
        opacity: 0.5
      &.me-lemmy
        background-image: var(--brand-lemmy)
        background-size: 20px
        top: 103px
        right: 94px
        width: 22px
        opacity: 0.5
        /[data-theme="dark"] &
          filter: grayscale(1) invert(0)
          opacity: 0.3
      &.me-mastodon
        background-image: var(--brand-mastodon)
        top: 77px
        right: 105px
        opacity: 0.5

  h3, p
    text-align: center  
  h3 
    margin: calc(var(--space-double) + var(--space-small)) 0 var(--space-medium)
    text-transform: uppercase
    font-family: 'Open Sans'
    font-weight: 700
    letter-spacing: 0.125rem
    word-wrap: normal

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: var(--color-meta)
  font-size: var(--font-size-small)

.tagcloud
  a
    margin-right: 5px
    display: inline-block
