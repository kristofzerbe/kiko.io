if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  @extend $base-style
  word-wrap: break-word
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0 20px
    ul
      list-style: disc
    ol
      list-style: decimal

.widget.about
  padding: default-padding 0
  *:not(i)
    display: block
    margin: 0 auto
  i 
    font-style: normal
  .avatar
    position: relative 
    width: 120px 
    border: 1px transparent solid
    a:not(.fab)
      border-radius: 50%;
      &:hover
        border-color: color-border
        box-shadow: 1px 2px 20px 5px color-border
        /[data-theme="dark"] &
          border-color: dark-color-border
          box-shadow: 1px 2px 20px 5px dark-color-border

      img 
        width: 120px
        border-radius: 50%;
        /[data-theme="dark"] &
          filter: brightness(85%)
    a.fab
      &:hover
        &:before
          opacity: 1
      &:before
        font-family: fa-icons
        position: absolute
        font-size: 18px;
        opacity: 0.42
    a.fa-github
      &:hover  
        color: color-github
        /[data-theme="dark"] &
          color: dark-color-github
      &:before
        content: icon-github
        top: -27px
        right: 50px
        font-size: 20px
    a.fa-devto
      &:hover  
        color: color-devto
        /[data-theme="dark"] &
          color: dark-color-devto
      &:before
        content: icon-devto
        top: -22px
        right: 20px
    a.fa-xing
      &:hover  
        color: color-xing
      &:before
        content: icon-xing
        top: -5px
        right: -5px
    a.fa-linkedin
      &:hover  
        color: color-linkedin
      &:before
        content: icon-linkedin
        top: 20px
        right: -22px
        font-size: 18px
    a.fa-500px
      &:hover  
        color: color-500px
        /[data-theme="dark"] &
          color: dark-color-500px
      &:before
        content: icon-500px
        top: 52px
        right: -24px
    a.fa-flickr
      &:hover  
        color: color-flickr
        /[data-theme="dark"] &
          color: dark-color-flickr
      &:before
        content: icon-flickr
        top: 81px
        right: -21px
    a.fa-unsplash
      &:hover  
        color: color-unsplash
        /[data-theme="dark"] &
          color: dark-color-unsplash
      &:before
        content: icon-unsplash
        top: 104px
        right: -5px
    a.fa-pixelfed
      &:hover  
        color: color-pixelfed
        /[data-theme="dark"] &
          color: dark-color-pixelfed
      &:before
        content: icon-pixelfed
        top: 119px
        right: 20px
        font-size: 20px
    a.fa-mastodon
      &:hover  
        color: color-mastodon
      &:before
        content: icon-mastodon
        top: 126px
        right: 50px
  h3, p
    text-align: center  
  h3 
    margin: 3.5rem 0 medium-margin
    text-transform: uppercase
    font-family: 'Open Sans'
    font-weight: 700
    font-size: 1.25rem
    letter-spacing: 0.15rem
    word-wrap: normal
  p
    font-size: 1rem
    line-height: line-height

