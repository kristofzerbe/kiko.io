$block
  border-radius: var(--border-radius-small)

$block-inner
  @extend $block
  border-radius: var(--border-radius-normal)
  background: var(--color-block)
  box-shadow: var(--length-shadow) var(--color-border)

$block-inner-hover
  @extend $block-inner
  transition: all ease-out 0.3s
  &:hover
    transform: scale(1) translateY(-1px)
    box-shadow: var(--length-shadow) var(--color-shadow)

$base-style
  h1
    font-size: var(--font-title-size)
    line-height: var(--line-height-title)
  h2
    font-size: var(--font-pagetitle-size)
    line-height: var(--line-height-normal)
  h3
    font-size: var(--font-subtitle-size)
  h4
    font-size: var(--font-subtitle-size)
  h5
    font-size: var(--font-minortitle-size);
  h6
    font-size: var(--font-size-normal);
    color: var(--color-meta)
  hr
    display: block
    border: 0px
    height: 24px
    background-image: url('/images/divider.png')
    background-repeat: no-repeat
    background-position: center
    margin: var(--space-default) 0
    opacity: 0.1
    clear: both
    /[data-theme="dark"] &
      opacity: 0.5
  strong
    font-weight: var(--font-weight-bolder)
  em, cite
    font-style: italic
  sup, sub
    font-size: var(--font-size-small)
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5rem
  sub
    bottom: -0.2rem
  small
    font-size: var(--font-size-small)
  p
    small
      display: inline-block
      line-height: var(--line-height-small)
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 0 var(--space-default)
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: disc
  ol
    list-style: decimal
  dt
    font-weight: var(--font-weight-bold)
  fieldset
    position: relative

$inview-image
  @media (prefers-reduced-motion: no-preference)
    transform: scale(1)
    transform-style: preserve-3d
    transition: all ease-out .6s  
    opacity: 0.6
    filter: var(--filter-gray)
    /[data-theme="dark"] &
      opacity: 0.8

$inview-image-visible
  @media (prefers-reduced-motion: no-preference)
    transform: scale(1.025)
    opacity: 1
    filter: grayscale(0) contrast(1)
    /[data-theme="dark"] &
      opacity: 1
      filter: grayscale(0) contrast(1) //brightness(0.75)

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}