$block
  border-radius: border-radius-small

$block-inner
  @extend $block
  border-radius: border-radius
  background: var(--color-block)
  box-shadow: var(--length-shadow) var(--color-border)

$block-inner-hover
  @extend $block-inner
  transition: all ease-out 0.3s
  &:hover
    transform: scale(1) translateY(-1px)
    box-shadow: var(--length-shadow) var(--color-shadow)

$block-caption
  text-decoration: none
  text-transform: uppercase
  letter-spacing: 1px
  font-weight: font-weight-bold

$base-style
  h1
    font-size: font-title-size
    line-height: font-title-size
  h2
    font-size: font-pagetitle-size
    line-height: font-pagetitle-size
  h3
    font-size: font-subtitle-size
  h4
    font-size: font-subtitle-size
  h5
    font-size: 1.1rem
  h6
    font-size: 1rem
    color: var(--color-meta)
  hr
    display: block
    border: 0px
    height: 24px
    background-image: url('/images/divider.png')
    background-repeat: no-repeat
    background-position: center
    margin: 24px 0
    opacity: 0.1
    clear: both
    /[data-theme="dark"] &
      opacity: 0.5
  strong
    font-weight: font-weight-bolder
  em, cite
    font-style: italic
  sup, sub
    font-size: font-size-small
    line-height: 0
    position: relative
    vertical-align: baseline
  sup
    top: -0.5rem
  sub
    bottom: -0.2rem
  small
    font-size: font-size-small
  p
    small
      display: inline-block
      line-height: line-height-small
  acronym, abbr
    border-bottom: 1px dotted
  ul, ol, dl
    margin: 0 20px
  ul, ol
    ul, ol
      margin-top: 0
      margin-bottom: 0
  ul
    list-style: disc
  ol
    list-style: decimal
  dt
    font-weight: font-weight-bold
  fieldset
    position: relative

$title
  position: relative
  display: inline-block
  margin: block-margin 0
  font-size: font-pagetitle-size
  font-weight: font-weight-bold
  line-height: line-height-title
  text-transform: uppercase
  color: var(--color-text)
  small
    display: block
    font-weight: font-weight-normal
    font-size: font-size
    line-height: line-height
    opacity: 0.66
  span
    font-weight: font-weight-normal
    text-transform: uppercase
    b 
      padding: 0 (default-padding / 5)
      text-transform: none
      font-weight: font-weight-normal
      opacity: 0.33
  strong
    word-wrap: break-word
    word-break: keep-all
    display: inline-block
  // strong.gap
  //     margin-top: 1rem

$neutral-anchor
  color: inherit !important
  border-bottom: none !important
  text-decoration-line: underline !important
  text-decoration-style: dotted !important
  text-decoration-color: var(--color-border) !important
  &:hover
    text-decoration-style: solid !important
    text-decoration-color: inherit !important

$inview-image
  @media (prefers-reduced-motion: no-preference)
    transform: scale(1)
    transform-style: preserve-3d
    transition: all ease-out .6s  
    opacity: 0.6
    filter: var(--filter-gray)
    /[data-theme="dark"] &
      opacity: 0.8

$inview-image-visible
  @media (prefers-reduced-motion: no-preference)
    transform: scale(1.025)
    opacity: 1
    filter: grayscale(0) contrast(1)
    /[data-theme="dark"] &
      opacity: 1
      filter: grayscale(0) contrast(1) //brightness(0.75)

placeholder()
	&::-webkit-input-placeholder
		{block}
	&:-moz-placeholder
		{block}
	&::-moz-placeholder
		{block}
	&:-ms-input-placeholder
		{block}