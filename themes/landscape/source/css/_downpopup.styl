.downupPopup
  position: fixed
  bottom: 0
  overflow: hidden
  z-index: 9999
  will-change: transform
  height: 100%
  left: 50%
  display: flex
  flex-direction: column
  &.no-act
    transform: translate(-50%, 100vh) !important

.downupPopup-header
  box-sizing: border-box
  padding: 2vh default-margin
  display: flex
  justify-content: space-between
  font-weight: font-weight-bold
  font-size: font-subtitle-size
  text-transform: uppercase
  background-color: rgba(255, 255, 255, 95%)
  /[data-theme="dark"] &
    background-color: rgba(51, 51, 51, 95%)
  .downupPopup-kapat
    align-self: center
    font-size: 20px
    cursor: pointer
    stroke: var(--color-text) //TODO: was color-foreground

.downupPopup-content
  background-color: rgba(255, 255, 255, 95%)
  /[data-theme="dark"] &
    background-color: rgba(51, 51, 51, 95%)
  height: 100%
  padding-top: 0
  section
    padding: default-margin
    overflow-x: hidden
    &:first-child
      padding-top: 0
    &:nth-child(even)
      background-color: rgba(230, 230, 230, 95%)
      /[data-theme="dark"] &
         background-color: rgba(34, 34, 34, 95%)
    h1
      margin: small-margin 0 default-margin
      padding: 0 0 small-margin
      font-weight: font-weight-bold
      opacity 0.8
    details
      overflow-x: hidden
      margin-bottom: small-margin
      summary
        padding: (default-padding / 2)
        font-weight: font-weight-bold
        opacity: 0.8
        cursor: pointer
        background-color: rgba(230, 230, 230, 95%)
        /[data-theme="dark"] &
           background-color: rgba(34, 34, 34, 95%)
      & > div
        margin: 0 (default-padding / 2) (default-padding-vert / 2)
    p
      padding: 0
    label
      display: block
      margin-top: 10px
      margin-bottom: 2px
      margin-left: 0
      font-family: font-mono
      font-size: font-size-tiny
      text-transform: uppercase
      opacity: 0.5
      line-height: normal
    input, textarea, button
      padding: 12px
      border-radius: 2px
    input, textarea 
      width: 100%
      font-size: inherit
      box-sizing: border-box
      border-width: 1px
      border-style: solid
      border-color: var(--color-border)
      background-color: var(--color-block)
      color: var(--color-text) //TODO: was color-foreground
      &:focus
        outline: none
    input
      line-height: 1rem
      &::placeholder
        font-style: italic
        opacity: 0.5
    button
      cursor: pointer
      border-width: 1px
      border-style: solid
      border-color: #ddd
      background-color: #ddd
      color: #222
      /[data-theme="dark"] &
        border-color: #111
        background-color: #111
        color: #fff
    h3
      font-weight: font-weight-bold
    figure
      margin: 0
      img
        width: 100%
        max-width: 480px
      figcaption
        font-size: font-size-small
        font-style: italic

#dark-back
  top: 0
  left: 0
  width: 100%
  height: 100%
  position: fixed
  display: none
  background: rgba(0, 0, 0, 0.4)
  z-index: 90
  padding-right: 17px
  overflow: hidden
