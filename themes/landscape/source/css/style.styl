pre.json
  font-family: 'Roboto Mono',monospace
  font-size: 13px
  .string 
    color: #4271ae
  .number 
    color: #4271ae
  .boolean 
    color: #4271ae
  .null
    color: #ababab
  .key
    color: #c15353

if sidebar and sidebar isnt bottom
  main:not(.hide-sidebar)
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    main
      float: right

.medium-zoom--opened .medium-zoom-overlay
  z-index: 999
  backdrop-filter: blur(8px)

.medium-zoom-image--opened
  z-index: 1000
  border-radius: (border-radius-small / 2)

#wrap-404
  text-align: center
  margin: 20px 0 40px
  pre
    white-space:pre
    letter-spacing:0
    font-family: font-mono
    font-size: 16px
    zoom: 80%
    @media mq-mobile
      zoom: 50%

#introduction
  .page-title
    text-align: center
    font-size: 2rem
    letter-spacing: 0.1rem
    @media mq-mobile
      font-size: 1.75rem
      letter-spacing: 0
    margin: double-margin auto small-margin
    font-weight: font-weight-normal
    strong
      font-weight: font-weight-extrabold
      background: url(/images/banner.jpg) no-repeat 58% 67%
      -webkit-background-clip: text
      color: transparent
  .page-content
    position: relative
    text-align: justify
    max-width: 410px
    margin: 0 auto
    @media mq-mobile
      padding: 0 1.5rem
    &:before
      display: block
      position: absolute
      font-family: fa-icons
      text-rendering: auto
      -webkit-font-smoothing: antialiased
      z-index: -1
      color: #fff
      opacity: 0.75
      line-height: 1em
      /[data-theme="dark"] &
        color: #1a1a1a
  &.d0
    .page-content:before
      content: icon-brush
      font-size: 14em
      top: -10px
      left: -148px
      transform: rotate(295deg)
      @media mq-mobile
        font-size: 14em
        top: 4px
        left: -100px
        transform: rotate(295deg)
  &.d1
    .page-content:before
      content: icon-pencil
      font-size: 14em
      top: -8px
      left: -120px
      transform: rotate(110deg)
      @media mq-mobile
        font-size: 13em
        top: 11px
        left: -80px
        transform: rotate(116deg)
  &.d2
    .page-content:before
      content: icon-thumbtack
      font-size: 15em
      top: -24px
      left: -106px
      transform: rotate(339deg)
      @media mq-mobile
        font-size: 16em
        top: -16px
        left: -88px
        transform: rotate(342deg)
  &.d3
    .page-content:before
      content: icon-feather
      font-size: 14em
      top: -11px
      left: -137px
      transform: rotate(293deg)
      @media mq-mobile
        font-size: 14em
        top: -16px
        left: -98px
        transform: rotate(298deg)
  &.d4
    .page-content:before
      content: icon-bullhorn
      font-size: 14em
      top: -11px
      left: -121px
      transform: rotate(59deg) scaleX(-1)
      @media mq-mobile
        font-size: 13em
        top: 1px
        left: -80px
        transform: rotate(59deg) scaleX(-1)
  &.d5
    .page-content:before
      content: icon-asterisk
      font-size: 13em
      top: -35px
      left: -100px
      transform: rotate(298deg)
      @media mq-mobile
        font-size: 13em
        top: -20px
        left: -90px
        transform: scaleX(-1) rotate(327deg)
  &.d6
    .page-content:before
      content: icon-tag
      font-size: 14em
      top: -25px
      left: -110px
      transform: scaleX(-1) rotate(72deg)
      @media mq-mobile
        font-size: 13em
        top: 13px
        left: -68px
        transform: scaleX(-1) rotate(72deg)

