@import "nib"
@import "_variables"
@import "_util/mixin"
@import "_util/grid"
@import "_fontawesome"
@import "_opensans"
@import "_sourcecodepro"

global-reset()

::-webkit-scrollbar
  width: 8px;
  height: 8px;
  background-color: color-background
  /[data-theme="dark"] &
    background-color: dark-color-background
::-webkit-scrollbar-track
  background-color: color-background
  /[data-theme="dark"] &
    background-color: dark-color-background
::-webkit-scrollbar-thumb
  background-color: color-border
  /[data-theme="dark"] &  
    background-color: dark-color-border

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

html, body, #container
  height: 100%

body
  color: color-foreground
  background: color-background
  /[data-theme="dark"] &
    color: dark-color-foreground
    background: dark-color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container, #inner-container
  position: relative

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  /[data-theme="dark"] &
    background: dark-color-background  

if sidebar and sidebar isnt bottom
  main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    main
      float: right

@import "_extend"
@import "_partial/header"
@import "_partial/article"
@import "_partial/comment"
@import "_partial/archive"
@import "_partial/page"
@import "_partial/anything"
@import "_partial/footer"
@import "_partial/highlight"
@import "_partial/mobile"

if sidebar
  @import "_partial/sidebar"