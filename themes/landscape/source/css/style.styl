@font-face
  font-family: fa-icon-brands
  font-style: normal
  font-weight: normal
  src: url(fa-icon-path + "/fa-brands-400.eot?v=#" + fa-icon-version)
  src: url(fa-icon-path + "/fa-brands-400.eot?#iefix&v=#" + fa-icon-version) format("embedded-opentype"),
    	 url(fa-icon-path + "/fa-brands-400.woff2?v=#" + fa-icon-version) format("woff2"),
       url(fa-icon-path + "/fa-brands-400.woff?v=#" + fa-icon-version) format("woff"),
       url(fa-icon-path + "/fa-brands-400.ttf?v=#" + fa-icon-version) format("truetype"),
       url(fa-icon-path + "/fa-brands-400.svg#fontawesome?v=#" + fa-icon-version) format("svg")

.fab
  font-family: fa-icon-brands

@font-face
  font-family: fa-icon-regular
  font-style: normal
  font-weight: 400
  src: url(fa-icon-path + "/fa-regular-400.eot?v=#" + fa-icon-version)
  src: url(fa-icon-path + "/fa-regular-400.eot?#iefix&v=#" + fa-icon-version) format("embedded-opentype"),
    	 url(fa-icon-path + "/fa-regular-400.woff2?v=#" + fa-icon-version) format("woff2"),
       url(fa-icon-path + "/fa-regular-400.woff?v=#" + fa-icon-version) format("woff"),
       url(fa-icon-path + "/fa-regular-400.ttf?v=#" + fa-icon-version) format("truetype"),
       url(fa-icon-path + "/fa-regular-400.svg#fontawesome?v=#" + fa-icon-version) format("svg")

.far
  font-family: fa-icon-regular
  font-weight: 400
  
@font-face
  font-family: fa-icon-solid
  font-style: normal
  font-weight: 900
  src: url(fa-icon-path + "/fa-solid-900.eot?v=#" + fa-icon-version)
  src: url(fa-icon-path + "/fa-solid-900.eot?#iefix&v=#" + fa-icon-version) format("embedded-opentype"),
    	 url(fa-icon-path + "/fa-solid-900.woff2?v=#" + fa-icon-version) format("woff2"),
       url(fa-icon-path + "/fa-solid-900.woff?v=#" + fa-icon-version) format("woff"),
       url(fa-icon-path + "/fa-solid-900.ttf?v=#" + fa-icon-version) format("truetype"),
       url(fa-icon-path + "/fa-solid-900.svg#fontawesome?v=#" + fa-icon-version) format("svg")

.fa, .fas
  font-family: fa-icon-solid
  font-weight: 900

html, body, #container
  height: 100%

body
  color: color-foreground
  background: color-background
  // @media prefers-dark
  //   color: dark-color-foreground
  //   background: dark-color-background
  /[data-theme="dark"] &
    color: dark-color-foreground
    background: dark-color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

#container
  position: relative

.mobile-nav-on
  overflow: hidden

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  // @media prefers-dark
  //   background: dark-color-background  
  /[data-theme="dark"] &
    background: dark-color-background  
  .mobile-nav-on &
    left: mobile-nav-width

if sidebar and sidebar isnt bottom
  #main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    #main
      float: right

