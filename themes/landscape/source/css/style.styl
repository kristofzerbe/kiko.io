global-reset()

::-webkit-scrollbar
  width: 8px;
  height: 8px;
  background-color: color-background
  /[data-theme="dark"] &
    background-color: dark-color-background
::-webkit-scrollbar-track
  background-color: color-background
  /[data-theme="dark"] &
    background-color: dark-color-background
::-webkit-scrollbar-thumb
  background-color: color-border
  /[data-theme="dark"] &  
    background-color: dark-color-border

input, button
  margin: 0
  padding: 0
  &::-moz-focus-inner
    border: 0
    padding: 0

a
  transition: all ease-out 0.2s
  color: color-link
  /[data-theme="dark"] &
    color: dark-color-link

html, body, #container
  height: 100%

html.gray
  #banner, img, svg
    filter: grayscale(1) !important

html.gray[data-theme="light"]
  #content
    p, a
      color: #111 !important
    li:hover
      border-color: #111 !important

html.gray[data-theme="dark"]
  #content 
    p, a
      color: #fff !important
    li:hover
      border-color: #fff !important

body
  color: color-foreground
  background: color-background
  /[data-theme="dark"] &
    color: dark-color-foreground
    background: dark-color-background
  font: font-size font-sans
  -webkit-text-size-adjust: 100%
  @media mq-normal
    overflow: scroll !important

.outer
  clearfix()
  max-width: (column-width + gutter-width) * columns + gutter-width
  margin: 0 auto
  padding: 0 gutter-width

.inner
  column(columns)

.left, .alignleft
  float: left

.right, .alignright
  float: right

.clear
  clear: both

.hide 
  display: none

#container, #inner-container
  position: relative

#wrap
  height: 100%
  width: 100%
  position: absolute
  top: 0
  left: 0
  transition: 0.2s ease-out
  z-index: 1
  background: color-background
  /[data-theme="dark"] &
    background: dark-color-background  

if sidebar and sidebar isnt bottom
  main
    @media mq-normal
      column(main-column)

if sidebar is left
  @media mq-normal
    main
      float: right

.medium-zoom--opened .medium-zoom-overlay
  z-index: 999

.medium-zoom-image--opened
  z-index: 1000

#introduction
  .page-title
    text-align: center
    font-size: 2.4em
    @media mq-mobile
      font-size: 2em
    margin: 1em auto 0.5em
    font-weight: 300
    strong
      font-weight: 900
      background: url(/images/banner.jpg) no-repeat 56% 68%
      -webkit-background-clip: text
      color: transparent
  .page-content
    position: relative
    text-align: justify
    max-width: 400px
    margin: 0 auto
    @media mq-mobile
      padding: 0 1.75em
    &:before
      display: block
      position: absolute      
      font-family: fa-icon-solid      
      color: #ffffff
      opacity: 0.5
      text-rendering: auto
      -webkit-font-smoothing: antialiased      
      z-index: -1
  &.d1
    .page-content:before
      content: icon-pen
      font-size: 14em
      top: -8px
      left: -120px
      transform: rotate(110deg)
      @media mq-mobile
        font-size: 13em
        top: 11px
        left: -80px
        transform: rotate(116deg)
  &.d2
    .page-content:before
      content: icon-thumbtack
      font-size: 15em
      top: -4px
      left: -106px
      transform: rotate(339deg)
      @media mq-mobile
        font-size: 16em
        top: -16px
        left: -100px
        transform: rotate(342deg)
  &.d3
    .page-content:before
      content: icon-feather
      font-size: 14em
      top: -11px
      left: -137px
      transform: rotate(293deg)
      @media mq-mobile
        font-size: 14em;
        top: -16px;
        left: -98px;
        transform: rotate(298deg);
  &.d4
    .page-content:before
      content: icon-penfancy
      font-size: 14em
      top: -11px
      left: -121px
      transform: rotate(113deg)
      @media mq-mobile
        font-size: 13em
        top: 1px
        left: -100px
        transform: rotate(123deg)
  &.d5
    .page-content:before
      content: icon-penclip
      font-size: 13em
      top: 0px
      left: -110px
      transform: rotate(298deg)
      @media mq-mobile
        font-size: 13em
        top: 4px
        left: -100px
        transform: scaleX(-1) rotate(327deg)
  &.d6
    .page-content:before
      content: icon-paperclip
      font-size: 14em
      top: -3px
      left: -122px
      transform: scaleX(-1) rotate(337deg)
      @media mq-mobile
        font-size: 13em
        top: 13px
        left: -83px
        transform: scaleX(-1) rotate(322deg)
  &.d7
    .page-content:before
      content: icon-code
      font-size: 14em
      top: 1px
      left: -108px
      transform: rotate(346deg)
      @media mq-mobile
        font-size: 14em
        top: 4px
        left: -116px
        transform: rotate(355deg)

