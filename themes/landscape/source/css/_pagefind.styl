.pagefind-ui__search-input  
  &:focus-visible
    outline: none
    border-color: color-border-3d !important
    /[data-theme="dark"] &
      border-color: dark-color-border-3d !important

.pagefind-ui__search-input,
.pagefind-ui__message
  font-weight: font-weight-normal !important

.pagefind-ui__message
  padding: 0 !important

.pagefind-ui__message,
.pagefind-ui__results
  margin: 0 10px !important

.pagefind-ui__result
  padding-bottom: 0 !important
  &:first-child
    border-top: none !important
  &:last-child
    border-bottom: none !important

.pagefind-ui__result-link
  &:hover
    color: var(--color-accent1) !important

.pagefind-ui__result-title
  font-weight: font-weight-bold !important
  font-size: font-titlelist-size !important

.pagefind-ui__result-excerpt
  font-weight: font-weight-normal !important
  line-height: line-height-text !important
  mark
    background-color: transparent !important
    color: color-highlight !important

.pagefind-ui__result-tags
  margin-left: 0 !important

.pagefind-ui__button
  background-color: color-button !important
  color: color-button-link !important
  border-radius: border-radius-small !important
  border: none !important
  /[data-theme="dark"] &
    background-color: dark-color-button !important
    color: dark-color-button-link !important
  &:hover
    background-color: var(--color-accent) !important
    color: color-block !important
