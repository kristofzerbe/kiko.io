
:root
  --pagefind-ui-scale: 0.8 !important
  --pagefind-ui-border-width: 1px !important
  --pagefind-ui-border-radius: 0 !important
  --pagefind-ui-image-border-radius: 0 !important
  --pagefind-ui-font: font-sans !important
  // --pagefind-ui-image-box-ratio: 3 / 2

html[data-theme="light"]
  --pagefind-ui-primary: color-highlight
  --pagefind-ui-text: color-foreground 
  --pagefind-ui-background: #fff 
  --pagefind-ui-border: color-border-article
  --pagefind-ui-tag: color-light

html[data-theme="dark"]
  --pagefind-ui-primary: dark-color-highlight
  --pagefind-ui-text: dark-color-foreground
  --pagefind-ui-background: #000
  --pagefind-ui-border: dark-color-border-article
  --pagefind-ui-tag: dark-color-light

/* OVERRIDES */
