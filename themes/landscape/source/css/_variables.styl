dark-color-category-javascript = #94672f

color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39

// Fonts
font-sans = -apple-system, BlinkMacSystemFont,
    "Open Sans", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-size = 14px
line-height = 1.6em
line-height-title = 1.1em
line-height-subtitle = 1em

fa-icon-regular = FontAwesome5Regular
fa-icon-solid = FontAwesome5Solid
fa-icon-brands = FontAwesome5Brands
fa-icon-path = "fonts"
fa-icon-version = "5.11"

icon-bars = "\f0c9"
icon-home = "\f015"
icon-arrow-left = "\f060"
icon-box = "\f187"
icon-rss = "\f09e"
icon-search = "\f002"
icon-comment = "\f27a"
icon-chevron-left = "\f053"
icon-chevron-right = "\f054"
icon-angle-right = "\f105"
icon-long-arrow-right = "\f30b"
icon-caret-right = "\f0da"
icon-twitter = "\f099"
icon-facebook = "\f082"
icon-pinterest = "\f0d2"
icon-github = "\f09b"
icon-xing = "\f168"
icon-linkedin = "\f0e1"
icon-500px = "\f26e"
icon-google = "\f0d5"
icon-moon = "\f186"
icon-sun = "\f185"

// Header
icon-size = 18px
icon-mobile-size = 16px
icon-home-size = 22px
logo-size = 67px
subtitle-size = 16px
banner-height = 300px
banner-url = "images/banner.jpg"

sidebar = hexo-config("sidebar")

// Layout
block-margin = 2.5em
widget-margin = 2em
subtitle-margin = 0.75em
article-padding = 30px
mobile-nav-width = 280px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"
prefers-dark = "(prefers-color-scheme: dark)"