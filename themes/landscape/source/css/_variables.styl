// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Fonts
font-path = "fonts"
font-size = 16px
font-size-code = 0.85rem
font-size-medium = 0.94rem
font-size-small = 0.8rem
font-size-tiny = 0.7rem
font-title-size = 1.8rem
font-titlelist-size = 1.25rem
font-subtitle-size = 1.2rem
font-pagetitle-size = 1.5rem
font-weight-normal = 300
font-weight-bold = 400
font-weight-bolder = 500
font-weight-boldest = 600
font-weight-extrabold = 700

//-apple-system, BlinkMacSystemFont,
font-default = Arial,Helvetica,sans-serif
// font-sans = "Lexend", "Open Sans", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", sans-serif
// font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace

line-height = 1.5rem
line-height-medium = 1.4rem
line-height-small = 1.25rem
line-height-thin = 1rem
line-height-text = 1.66rem
line-height-title = 2.25rem
line-height-subtitle = 1.75rem

border-radius = 4px
border-radius-small = 2px

title-size = 67px
title-size-mobile = 53px
subtitle-size = 16px
subtitle-size-mobile = 12px

banner-height = 600px
banner-height-tablet = 450px
banner-height-mobile = 300px

sidebar = hexo-config("sidebar")

// Layout
default-margin = 1.5rem
extra-margin = 1.75rem
double-margin = 3rem
medium-margin = 1rem
small-margin = 0.5rem
thin-margin = 0.25rem
block-margin = 2.5rem

default-padding = 2rem
default-padding-vert = 1.5rem
medium-padding = 1rem
small-padding = 0.5rem
thin-padding = 0.25rem

// mobile-nav-width = 280px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-mobile-up = "screen and (min-width: 479px)"
mq-tablet-min = "screen and (max-width: 767px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"
mq-normal-range = "screen and (min-width: 768px) and (max-width: 1023px)"
mq-large = "screen and (min-width: 1024px)"
mq-medium = "screen and (max-width: 600px)"