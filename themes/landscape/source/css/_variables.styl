// Config
support-for-ie = false
vendor-prefixes = webkit moz ms official

// Colors
color-default = #555
color-grey = #777
color-header = #bbb
color-border = #ddd
color-border-article = #eee
color-link = #0069dc
color-background = #f1f1f1
color-sidebar-text = #777
color-footer-text = #bbb
color-footer-link = #eee
color-widget-background = transparent
color-widget-border = transparent
color-widget-link = #555
color-mobile-nav-background = #fff

color-category-sql = #82bfb5
color-category-tools = #9cb7f0
color-category-javascript = #e9c496

color-twitter = #00aced
color-facebook = #3b5998
color-pinterest = #cb2027
color-google = #dd4b39


// Fonts
font-sans = -apple-system, BlinkMacSystemFont,
    "Open Sans", "Roboto", "Oxygen", "Ubuntu", "Cantarell",
    "Fira Sans", "Droid Sans", "Helvetica Neue",
    sans-serif
font-serif = Georgia, "Times New Roman", serif
font-mono = "Source Code Pro", Consolas, Monaco, Menlo, Consolas, monospace
font-size = 14px
line-height = 1.6em
line-height-title = 1.1em
line-height-subtitle = 1em

// font-icon = FontAwesome
// font-icon-path = "fonts/fontawesome-webfont"
// font-icon-version = "4.0.3"

fa-icon-regular = FontAwesome5Regular
fa-icon-solid = FontAwesome5Solid
fa-icon-brands = FontAwesome5Brands
fa-icon-path = "fonts"
fa-icon-version = "5.11"

// Header
icon-size = 18px
icon-mobile-size = 16px
icon-home-size = 22px
logo-size = 67px
subtitle-size = 16px
banner-height = 300px
banner-url = "images/banner.jpg"

sidebar = hexo-config("sidebar")

// Layout
block-margin = 2.5em
widget-margin = 2em
subtitle-margin = 0.75em
article-padding = 20px
mobile-nav-width = 280px
main-column = 9
sidebar-column = 3

if sidebar and sidebar isnt bottom
  _sidebar-column = sidebar-column
else
  _sidebar-column = 0

// Grids
column-width = 80px
gutter-width = 20px
columns = main-column + _sidebar-column

// Media queries
mq-mobile = "screen and (max-width: 479px)"
mq-tablet = "screen and (min-width: 480px) and (max-width: 767px)"
mq-normal = "screen and (min-width: 768px)"