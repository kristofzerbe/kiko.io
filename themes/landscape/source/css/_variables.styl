color-footer-link = #eee
color-widget-background = transparent
color-widget-border = transparent
color-widget-link = #555
color-category-sql = #82bfb5
color-category-tools = #9cb7f0
color-category-javascript = #e9c496

// Dark Colors
dark-color-background = #111
dark-color-foreground = #eee
dark-color-default = #dadada
dark-color-grey = #ccc
dark-color-header = #666
dark-color-block = #222
