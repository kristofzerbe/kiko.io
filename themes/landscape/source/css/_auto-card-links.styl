.auto-card-link-container
  container-type: inline-size
  position: relative
  overflow: hidden
  user-select: none

  .auto-card-link-thumbnail
    border-radius: border-radius-small 0 0 border-radius-small !important
    height: 100%
    object-fit: cover
    object-position: left top
    pointer-events: none
    width: 33% !important
    @media mq-mobile
      width: 25% !important

  .auto-card-link-card
    display: flex
    flex-direction: row-reverse
    height: 8rem
    transition: 20ms ease-in 0s
    cursor: pointer
    text-decoration: none
    border-radius: border-radius-small
    border-style: solid
    border-width: 1px
    border-color: color-background
    color: color-link
    background: color-background
    &:hover
      background: color-hover-background
      border-color: color-hover-background
      text-decoration: none
    /[data-theme="dark"] &
      border-color: dark-color-border
      color: dark-color-link
      background: dark-color-background
      &:hover
        background: dark-color-hover-background
        border-color: dark-color-hover-background

    .auto-card-link-main
      display: flex
      flex-grow: 1
      flex-direction: column
      justify-content: space-between
      gap: 0.2rem
      padding: 0.5rem 0.75rem
      overflow: hidden
      text-align: left

      .auto-card-link-title
        overflow: hidden
        white-space: nowrap
        text-overflow: ellipsis
        font-weight: font-weight-bold
        // &:hover
        //   text-decoration: underline

      .auto-card-link-description
        overflow: hidden
        line-height: line-height-small
        height: line-height-small * 2
        color: color-grey
        font-size: font-size-small

      .auto-card-link-host
        font-size: font-size-small
        display: flex
        flex-direction: row
        align-items: center
        span
          overflow: hidden
          text-overflow: ellipsis
          white-space: nowrap
          &:hover
            text-decoration: underline

      .auto-card-link-favicon
        width: 16px !important
        height: auto !important
        margin: 0 0.5rem 0 0 !important
