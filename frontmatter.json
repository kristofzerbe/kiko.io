{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.templates.folder": "scaffolds",
  "frontMatter.content.pageFolders": [
    {
      "title": "_posts",
      "path": "D:/Dropbox/GitHub/kiko.io/source/_posts"
    }
  ],
  "frontMatter.content.draftField": {
    "name": "hidden",
    "type": "boolean"
  },
  "frontMatter.content.placeholders": [
    {
      "id": "sm",
      "value": "/static/images/social-media/{{slug}}.png"
    }
  ],
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "fields": [
        {
          "title": "Slug",
          "name": "slug",
          "type": "string",
          "single": true
        },
        {
          "title": "Title",
          "name": "title",
          "type": "string",
          "single": true
        },
        {
          "title": "Subitle",
          "name": "subtitle",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime"
        },
        {
          "title": "Photograph",
          "name": "photograph",
          "type": "fields",
          "fields": [
            {
              "title": "File",
              "name": "file",
              "type": "string",
              "single": true
            },
            {
              "title": "Name",
              "name": "name",
              "type": "string",
              "single": true
            },
            {
              "title": "Link",
              "name": "link",
              "type": "string"
            },
            {
              "title": "Preview",
              "type": "image",
              "isPreviewImage": true,
              "default": "/static/photos/mobile/{{file}}"
            },
            {
              "title": "Social Media",
              "name": "socialmedia",
              "type": "image",
              "default": "{{sm}}"
            }
          ]    
        },
        {
          "title": "Series",
          "name": "series",
          "type": "choice",
          "choices": ["Golem", "Lightroom Presets", "Discoveries", "Great Finds", "Step By Step", "IndieWeb", "A New Blog"]
        },
        {
          "title": "Categories",
          "name": "categories",
          "type": "categories"
        },
        {
          "title": "Tags",
          "name": "tags",
          "type": "tags"
        },
        {
          "title": "Hidden",
          "name": "hidden",
          "type": "draft"
        }
        
      ]
    }
  ],
  "frontMatter.taxonomy.tags": [
    "Browser",
    "Imaging",
    "Lightroom",
    "Mail",
    "Plugin",
    "SVG",
    "VS Code",
    "Workflow",
    "jQuery",
    "Workflow",
    "Windows",
    "WebAPI",
    "Visual Studio",
    "Versioning",
    "Tutorial",
    "Trello",
    "Theming",
    "Templating",
    "TFS/DevOps",
    "T4",
    "Stylus",
    "Share",
    "SPA",
    "Resource",
    "Publishing",
    "Presets",
    "PowerShell",
    "PWA",
    "Node.js",
    "MediaQuery",
    "Mail"
  ],
  "frontMatter.taxonomy.categories": [
    "Photo-Editing",
    "Tools",
    "UI/UX",
    "SQL",
    "Misc",
    "JavaScript",
    ".NET"
  ]
}